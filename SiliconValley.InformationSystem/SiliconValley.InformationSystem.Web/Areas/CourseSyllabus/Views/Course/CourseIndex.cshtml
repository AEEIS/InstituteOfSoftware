
@{
    ViewBag.Title = "CourseIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/html" id="topBar">
    <div class="layui-btn-container">

        <button type="button" class="layui-btn layui-btn-sm" lay-event="Add">
            <i class="layui-icon">&#xe654;</i>
            课程
        </button>
        <button type="button" class="layui-btn layui-btn-sm" lay-event="isUsing">
            <i class="layui-icon">&#xe654;</i>
            禁用/启用
        </button>
        <button type="button" class="layui-btn layui-btn-sm" lay-event="TypeBtton">
            <i class="layui-icon">&#xe615;</i>
            课程类型
        </button>
    </div>
</script>


<div div="searchDiv">

    <form class="layui-form">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">专业:</label>
                <div class="layui-input-inline">
                    <select name="quiz" lay-filter="majorfilter">
                        <option value="0">
                            全部
                        </option>
                        @{
                            foreach (var item in ViewBag.majors)
                            {
                                <option value="@item.Id">@item.SpecialtyName</option>
                            }
                        }
                    </select>

                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">阶段:</label>
                <div class="layui-input-inline">
                    <select lay-filter="grandfilter" lay-search="">
                        <option value="0">
                            全部
                        </option>
                        @{
                            foreach (var item in ViewBag.grands)
                            {
                                <option value="@item.Id">@item.GrandName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label">名称:</label>
                <div class="layui-input-inline">
                    <input type="text" id="searchinput" class="layui-input">
                </div>
            </div>

            <div class="layui-inline">
               <button type="button" id="searchbtn" class="layui-btn layui-btn-primary">查询</button>
            </div>
        </div>
    </form>

</div>

<div>
    <table class="layui-hide" id="courselist" lay-filter="courselist_filter"></table>
</div>

<script type="text/html" id="editBar">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="detail">详情</a>
</script>

@section script{

    <script src="~/Areas/Teaching/Scripts/Ajax.js"></script>

    <script src="~/Areas/CourseSyllabus/CourseOperation.js"></script>

}

