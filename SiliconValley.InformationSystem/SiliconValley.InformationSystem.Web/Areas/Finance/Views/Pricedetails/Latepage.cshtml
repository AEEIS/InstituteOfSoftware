
@{
    ViewBag.Title = "Latepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Latepage</h2>
<table class="layui-hide" id="test" lay-filter="test"></table>
@section script{
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-sm" lay-event="getAdd"><i class="layui-icon">&#xe654;</i>录入迟交信息</button>



        </div>
    </script>
    <script>
        layui.use(['table', 'layer', 'tree', 'form'], function () {
            var table = layui.table;
            var layer = layui.layer;
            var form = layui.form;

            //表格渲染
            table.render({
                elem: '#test'
                , url: '/Finance/Pricedetails/LateDate'
                , toolbar: '#toolbarDemo'
                , id: 'idTest'
                , page: true
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'radio' }
                    , { field: 'id', title: '编号 ' }
                    , { field: 'Stage', title: '阶段' }
                    , { field: 'Latestdays', title: '期限天数 ' }
                    , { field: 'Minimumcost', title: '最低金额 ' }


                ]]
                , page: true
                , limit: 8
                , limits: [8, 10, 15]
            });
          
            //监听头部工具栏
            table.on('toolbar(test)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id);
                switch (obj.event) {
                    case 'getAdd':
                        layer.open({
                            title: "录入学员迟交学费信息",
                            type: 2,
                            area: ['500px', '500px']
                            , content: "/Finance/Pricedetails/AddLate"
                            , end: function () { table.reload('idTest'); }
                            , anim: 1,
                            //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                        });
                        break;

                };
            });
            //查询功能
            form.on('submit(demo2)', function (data) {

                var x = data.field;
                if (x.ClassNumber == "" && x.Major_Id == "" && x.grade_Id == "" && x.BaseDataEnum_Id == "") {
                    layer.msg("至少选择一个查询", {
                        time: 5000, //20s后自动关闭
                        btn: ['确定']
                    });
                } else {
                    table.reload('idTest', {
                        where: {
                            ClassNumber: x.ClassNumber,
                            Major_Id: x.Major_Id,
                            grade_Id: x.grade_Id,
                            BaseDataEnum_Id: x.BaseDataEnum_Id
                        }, page: {
                            curr: 1
                        }
                    });
                }


                return false;
            });
        });

    </script>
}
