
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.Entity.Undergraduatecourse
    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>curriculum</title>
        <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/layui/layui.js"></script>
        <style>
            .lables{
                width:130px;
            
            }
        </style>
    </head>
    <body>
        <form class="layui-form" id="addGoodsForm" action="" lay-filter="example">
            <div class="layui-container" style="margin-top:40px;;margin-left:60px;">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="height:50px;">
                    <label class="layui-form-label lables">专业名称</label>
                    <div class="layui-input-inline">
                        @Html.DropDownList("MajorID", ViewBag.Major as IEnumerable<SelectListItem>, "请选择", new Dictionary<string, object>() { { "lay-verify", "required" }, { "lay-filter", "userClass" } })
                        <input type="text" style="display:none;" id="bool" />
                    </div>
                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="height:50px;">
                    <label class="layui-form-label lables">上级课程类别名称</label>
                    <div class="layui-input-inline">
                        <select lay-verify="required" id="CoursecategoryY" lay-filter="CoursecategoryY"></select>
                    </div>

                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="height:50px;">
                    <label class="layui-form-label lables">下级级课程类别名称</label>
                    <div class="layui-input-inline">
                        <select lay-verify="required"  id="CoursecategoryXid" name="CoursecategoryXid" lay-filter="Lei"></select>
                    </div>
                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="height:50px;">
                    <label class="layui-form-label lables">课程名称</label>
                    <div class="layui-input-inline">
                        @Html.TextBoxFor(a => a.Coursetitle, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入课程名称" }, { "class", "layui-input " } })
                    </div>
                    <label style="color:red;margin-left:70%;margin-top:-30px;display:none;" id="label">请换一个名称</label>
                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="height:50px;">
                    <label class="layui-form-label lables">学分</label>
                    <div class="layui-input-inline">
                        @Html.TextBoxFor(a => a.Credit, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入学分" }, { "class", "layui-input " } })
                    </div>
                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="height:50px;">
                    <label class="layui-form-label lables">费用</label>
                    <div class="layui-input-inline">
                        @Html.TextBoxFor(a => a.Cost, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入费用" }, { "class", "layui-input " } })
                    </div>
                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                    <label class="layui-form-label lables">备注</label>
                    <div class="layui-input-block">
                        @Html.TextAreaFor(a => a.Remarks, new Dictionary<string, object>() { { "placeholder", "请输入内容" }, { "class", "llayui-textarea textar" } })
                    </div>
                </div>
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                    <div class="layui-input-block" style="margin-left:154px;margin-top:30px;">
                        <button class="layui-btn" lay-submit="" type="button" lay-filter="demo1">确认</button>
                        <button type="reset" class="layui-btn layui-btn-primary" style="margin-left:30px;" id="remove">重置</button>
                    </div>
                </div>
            </div>

        </form>
    </body>
</html>
<script src="~/Areas/Teachingquality/js/AjaxAddupdate.js"></script>
<script>
    layui.use(['form', 'layedit', 'laydate', 'layer'], function () {

        var layer = layui.layer;
        var form = layui.form;
        //后台查找名称是否重复
        function CourseTitle() {
            var dbase = {
                CoursecategoryXid: $("#CoursecategoryXid").val(),
                Coursetitle: $("#Coursetitle").val()
            };
            $.post("/MyEducation/Education/BoolUndergraduatecourse", dbase, function (data) {
                if (data > 0) {
                    $("#label").css("display", "block");
                    $("#bool").val("22222");
                } else {
                    $("#label").css("display", "none");
                    $("#bool").val("");
                }
            });
        }


        //重置
        $("#remove").click(function () {
            $('#CoursecategoryYID').empty();
            layui.form.render("select");
        });
        //下拉框赋值上级
        function select(url, datae) {
            $.ajax({
                url: url,
                dataType: 'json',
                type: 'post',
                data: datae,
                success: function (data) {

                    $.each(data, function (index, item) {
                        $('#CoursecategoryY').append(new Option(item.name, item.id));//往下拉菜单里添加元素
                    })

                    layui.form.render("select");//菜单渲染 把内容加载进去
                }
            })
        }
        //下拉框赋值下级
        function CoursecategoryXselect(url, datae) {
            $.ajax({
                url: url,
                dataType: 'json',
                type: 'post',
                data: datae,
                success: function (data) {

                    $.each(data, function (index, item) {
                        $('#CoursecategoryXid').append(new Option(item.name, item.id));//往下拉菜单里添加元素
                    })

                    layui.form.render("select");//菜单渲染 把内容加载进去
                }
            })
        }
        //验证专业名称
        $("#Coursetitle").keyup(function () {      // 按键弹起时触发的事件；
            if ($(this).val() != "" && $("#CoursecategoryXid").val() != "") {
                CourseTitle();
            } else {
                $("#label").css("display", "none");
                $("#bool").val("");
            }

        });

        //监听专业下拉框
        form.on('select(userClass)', function (data) {
            $("#label").css("display", "none");
            $("#bool").val("");
            $('#CoursecategoryY').empty();
            $('#CoursecategoryY').append(new Option("请选择", ""));
            dbase = {
                MajorID: data.value
            };

            if (data.value != "") {
                select("/MyEducation/Education/SelectCoursecaregoryX", dbase);
            }
            layui.form.render("select");

        });
        //监听课程类别上级下拉框
        form.on('select(CoursecategoryY)', function (data) {
            $("#label").css("display", "none");
            $("#bool").val("");
            $('#CoursecategoryXid').empty();
            $('#CoursecategoryXid').append(new Option("请选择", ""));
            dbase = {
                CoursecategoryYID : data.value
            };

            if (data.value != "") {
                CoursecategoryXselect("/MyEducation/Education/SelectCoursecaregory", dbase);
            }
            layui.form.render("select");

        });
        //监听下级下拉框
        form.on('select(Lei)', function (data) {
            if (data.value != "" && $("#Coursetitle").val() != "") {
              CourseTitle();
            } else {
                $("#label").css("display", "none");
                $("#bool").val("");
            }

        });
        //监听提交
        form.on('submit(demo1)', function (data) {
            var db = data.field;
            console.log(db);
            if ($("#bool").val() == "") {
                $.ajax({
                    url: '/MyEducation/Education/Addcurriculum',
                    type: 'POST',
                    async: true,
                    cache: false,
                    timeout: 2000,
                    data: db,
                    beforeSend: function () {
                        i = showLoad();
                    },
                    success: function (data) {

                        if (data.Success == true) {
                            closeLoad(i);
                            layer.open({
                                type: 1
                                , title: false //不显示标题栏
                                , closeBtn: false
                                , area: '300px;'
                                , shade: 0.8
                                , id: 'LAY_layuipro' //设定一个id，防止重复弹出
                                , btn: ['继续添加课程', '返回到主页']
                                , btnAlign: 'c'
                                , moveType: 1 //拖拽模式，0或者1
                                , content: '<div style="padding: 50px; line-height: 22px; background-color: #393D49; color: #fff; font-weight: 300;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;添加成功</div>'
                                , success: function (layero) {
                                    var btn = layero.find('.layui-layer-btn');
                                    btn.find('.layui-layer-btn0').click(function () {
                                        $("#addGoodsForm")[0].reset();

                                        layui.form.render();
                                    });
                                    btn.find('.layui-layer-btn1').click(function () {
                                        var index = parent.layer.getFrameIndex(window.name);
                                        parent.layer.close(index);
                                    });
                                }
                            });
                        } else {
                            closeLoad(i);
                            layer.msg(data.Msg, {
                                time: 5000, //20s后自动关闭

                                btn: ['确定']
                            });
                        }
                    }
                    , error: function (xmlhttprequest, textstatus, message) {
                        closeLoad(i);
                        layer.msg("您的网络出现问题，请稍后再试！！！", {
                            time: 5000, //20s后自动关闭
                            btn: ['确定']
                        });
                    }
                })
            }

        })
    });
</script>