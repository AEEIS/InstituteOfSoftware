
@{
    ViewBag.Title = "StudentUnionMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="layui-hide" id="test" lay-filter="test"></table>
@section script{
    <script src="~/Areas/Teachingquality/js/Datetime.js"></script>
    @*头部工具栏*@
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-sm" lay-event="getAdd"><i class="layui-icon">&#xe654;</i>添加成员</button>



        </div>
    </script>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="select">详细</a>

    </script>
    <script>
        layui.use(['table', 'layer', 'tree', 'form'], function () {
            var table = layui.table;
            var layer = layui.layer;
            var form = layui.form;

            //表格渲染
            table.render({
                elem: '#test'
                , url: '/Teachingquality/StudentUnion/MebersGetDate'
                , toolbar: '#toolbarDemo'
                , id: 'idTest'
                , page: true
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'radio' }
                    , { field: 'Studentnumber', title: '学号', sort: true }
                    , { field: 'StidentName', title: '姓名' }
                  
                    , {
                        field: 'StudentSex', width: 80, title: '性别', templet: function (c) {
                            if (c.StudentSex == 0) {
                                return "女";
                            } else { return "男"; }
                        }
                    }
                    , { field: 'ClassName', title: '班级名称 ' }
                    //
                    , { field: 'Department', title: '部门 ' }
                    , { field: 'Position', title: '职位 ' }
                    , {
                        field: 'Inrtiationtime', title: '入学生会日期', templet: function (c) {
                            return TimeChange(c.Inrtiationtime);
                        }
                    }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 100 }
                ]]
                , page: true
                , limit: 8
                , limits: [8, 10, 15]
            });
            //查看班级学员
            table.on('tool(test)', function (obj) { //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
                var data = obj.data; //获得当前行数据
                var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
                var tr = obj.tr; //获得当前行 tr 的DOM对象

                if (layEvent === 'select') { //查看
                    console.log(data);
                }

            });
            //开设班级
            function Registeredtrainees() {

                layer.open({
                    title: "添加学生会成员",
                    type: 2,
                    area: ['700px', '650px']
                    , content: "/Teachingquality/StudentUnion/UnionMemberAdd"
                    , end: function () { table.reload('idTest');  }
                    , anim: 1,
                    //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                });
            }
            //监听头部工具栏
            table.on('toolbar(test)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id);
                switch (obj.event) {
                    case 'getAdd':
                        Registeredtrainees();
                        break;




                };
            });

            //查询功能
            form.on('submit(demo2)', function (data) {

                var x = data.field;
                if (x.ClassNumber == "" && x.Major_Id == "" && x.grade_Id == "" && x.BaseDataEnum_Id == "") {
                    layer.msg("至少选择一个查询", {
                        time: 5000, //20s后自动关闭
                        btn: ['确定']
                    });
                } else {
                    table.reload('idTest', {
                        where: {
                            ClassNumber: x.ClassNumber,
                            Major_Id: x.Major_Id,
                            grade_Id: x.grade_Id,
                            BaseDataEnum_Id: x.BaseDataEnum_Id
                        }, page: {
                            curr: 1
                        }
                    });
                }


                return false;
            });
        });



    </script>
}
