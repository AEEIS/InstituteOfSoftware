<div style="width:100%;height:150px;border:1px solid #1cc09f;">
    <div>
        <div>
           
         
            <table>
                <tr>
                    @{
                        foreach (var item in ViewBag.ClassdetailsView as List<ClassdetailsView>)
                        {
                            <td>班级人数</td>
                            <th>@item.count</th>
                            if (item.QQ != null)
                            {
                                <td>QQ群</td>
                                <th>@item.QQ</th>

                            }
                            if (item.WeChat!=null)
                            {
                                <td>微信群</td>
                                <th>@item.WeChat</th>
                            }
                        }
                    }



                </tr>
            
                <tr>
                    @foreach (var item in Model as List<ClassStudentView>)

                    {

                        if (item.Nameofmembers != null)
                        {

                            <td>@item.Nameofmembers:</td>
                            <th><div>@item.Name</div></th>
                        }
                    }
                
                </tr>

            </table>
        </div>
        <div style="position:absolute;left:50%;top:7%;">
            <h1>@ViewBag.ClassName</h1>
        </div>

    </div>
   
</div>
