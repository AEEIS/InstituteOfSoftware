
@{
    ViewBag.Title = "Studententrancefee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section style{

}
<h2>Studententrancefee</h2>
<table class="layui-hide" id="test" lay-filter="test"></table>
@section script{
    <script>
        layui.use(['table', 'layer', 'tree', 'form'], function () {
            var table = layui.table;
            var layer = layui.layer;
            var form = layui.form;

            //表格渲染
            table.render({
                elem: '#test'
                , url: '/Teachingquality/ClassSchedule/GetDate'
                , toolbar: '#toolbarDemo'
                , id: 'idTest'
                , page: true
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'radio' }
                    , { field: 'ClassName', title: '班级', sort: true }
                    , { field: 'Name', title: '姓名' }
                    , { field: 'Stidentid', title: '学号 ' }
                    , { field: 'Sex', title: '性别 ' }
                    , { field: 'HeadmasterName', title: '班主任 ' }
                    , { field: 'Phone', title: '电话 ' }
                    , { field: 'Amountofmoney', title: '已交 ' }
                    , { field: 'CurrentStageID', title: '阶段 ' }
                    , { field: 'ShouldJiao', title: '应交 ' }
                    , { field: 'Surplus', title: '欠费 ' }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 100 }
                ]]
                , page: true
                , limit: 8
                , limits: [8, 10, 15]
            });


            //查看班级学员
            table.on('tool(test)', function (obj) { //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
                var data = obj.data; //获得当前行数据
                var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
                var tr = obj.tr; //获得当前行 tr 的DOM对象
                console.log(data);
                if (layEvent === 'select') { //查看
                    window.location.href = '/Teachingquality/ClassSchedule/Tuitionfeeforentrancestudy?ClassID=' + data.id;
                    console.log(data);
                }

            });
            //开设班级
            function Registeredtrainees(name, id) {
                layer.open({
                    title: name,
                    type: 2,
                    area: ['600px', '550px']
                    , content: "/Teachingquality/ClassSchedule/AddClassSchedule?id=" + id
                    , end: function () { table.reload('idTest'); select(); }
                    , anim: 1,
                    //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                });
            }
            //监听头部工具栏
            table.on('toolbar(test)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id);
                switch (obj.event) {
                    case 'getAdd':
                        var a = "开设班级";
                        Registeredtrainees(a);
                        break;
                    case 'FindTuition':
                        //升学缴费情况
                        if (checkStatus.data.length > 0) {

                            var id = checkStatus.data[0].id;
                            var dabs = {
                                ClassID: id
                            };
                            $.post("/Teachingquality/ClassSchedule/PayMones", dabs, function (da) {
                                if (da == true) {
                                    window.location = "/Teachingquality/ClassSchedule/FindTuition/" + id;
                                } else {
                                    layer.alert('该班级为毕业班级', { icon: 0 });
                                }
                            });

                        } else {
                            layer.alert('请选择一条数据', { icon: 0 });
                        }

                        break;



                };
            });


            //查询功能
            form.on('submit(demo2)', function (data) {
                var x = data.field;
                console.log(x);
                //if (x.ClassNumber == "" && x.Major_Id == "" && x.grade_Id == "" && x.BaseDataEnum_Id == "" && x.ClassstatusID=="") {
                //    layer.msg("至少选择一个查询", {
                //        time: 5000, //20s后自动关闭
                //        btn: ['确定']
                //    });
                //} else {
                table.reload('idTest', {
                    where: {
                        ClassNumber: x.ClassNumber,
                        Major_Id: x.Major_Id,
                        grade_Id: x.grade_Id,
                        BaseDataEnum_Id: x.BaseDataEnum_Id,
                        ClassstatusID: x.ClassstatusID
                    }, page: {
                        curr: 1
                    }
                });
                return false;
            });
        });

    </script>
    }
