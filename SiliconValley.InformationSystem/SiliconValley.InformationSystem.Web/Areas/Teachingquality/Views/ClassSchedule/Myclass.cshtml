
@{
    ViewBag.Title = "Myclass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SiliconValley.InformationSystem.Entity.ViewEntity.SuccessionrecordView
@section style{
    <style>
        .round_icon {
            width: 152px;
            height: 151px;
            display: flex;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .table1 {
            width: 90%;
            margin-top: 10px;
        }

            .table1 tr {
                text-align: center;
                height: 37px;
            }

            .table1 th {
                text-align: end;
            }
        .div1 {
            cursor: pointer;
          
        }
            .div1:hover {
                background-color: chartreuse;
            }
    </style>
}


<div style="width:20%;height:400px; border:1px solid #e6e6e6;float:left;margin-top:10px;">
    <div style="position:relative;left:79px;"><img src="~/uploadXLSXfile/EmpImage/@Model.Images" class="round_icon" /></div>


    <table cellspacing="1" class="table1">


        <tr>
            <tH>姓名:</tH>
            <td>@Model.EmpName</td>
        </tr>
        <tr>
            <tH>性别:</tH>
            <td>@Model.Sex</td>
        </tr>
        <tr>
            <th>联系方式:</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>学历:</th>
            <td>@Model.Education</td>
        </tr>
        <tr>
            <th>部门:</th>
            <td>@Model.DeptName</td>
        </tr>


    </table>
  
</div>
      <div style="width:79%;float:left;" id="classid">
          
      </div>


<script src="~/Areas/Teachingquality/js/Datetime.js"></script>

@section script{}
    <script>
        $.post("/Teachingquality/ClassSchedule/EmpClass", function (data) {
            console.log(data);
            for (var i = 0; i < data.length; i++) {
                $("#classid").append($('<div class="div1" style="width:150px;height:150px;float:left;margin-left:20px;margin-top:20px;">  <input type="text" value=' + data[i].id + ' style="display:none" /> <img  style="width:150px;height:150px;" src="/Areas/Teachingquality/ClassImages/ClassImages.jpg" /> <div style="height:30px;margin-top:-91px;text-align:center;font-size:17pt;color:#00ff21;">' + data[i].ClassNumber + '<br/>'+data[i].grade_Id+'</div><</div>'));
            }
        })
     
        $("body").on("click", ".div1", function (e) {
            e.stopPropagation();
            window.location.href = '/Teachingquality/ClassSchedule/ClassStudent?ClassNumber=' + $($(this).children()[0]).val();
        })
      
    
    </script>



