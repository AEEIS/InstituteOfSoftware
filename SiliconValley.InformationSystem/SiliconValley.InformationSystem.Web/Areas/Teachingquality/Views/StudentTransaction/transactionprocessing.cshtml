<script src="~/Areas/Teachingquality/js/AjaxAddupdate.js"></script>
<script>
    layui.use(['table', 'layer', 'tree', 'form'], function () {
        var table = layui.table;
        var layer = layui.layer;
        var form = layui.form;

        //表格渲染
        table.render({
            elem: '#test'
            , url: '/Teachingquality/ClassSchedule/TransactionDate?ClassID=' + $("#ClassID").val()
            , toolbar: '#toolbarDemo'
            , id: 'idTest'
            , page: true
            , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
            , cols: [[
                { type: 'radio' }
                , { field: 'Studentnumber', title: '学号', sort: true }
                , { field: 'Name', title: '姓名' }
                , { field: 'Sex', title: '性别 ' }
                , { field: 'Telephone', title: '联系电话 ' }
                , { field: 'StatesName', title: '类型 ' }


                , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 100 }
            ]]
            , page: true
            , limit: 8
            , limits: [8, 10, 15]
        });
        //查看班级学员
        table.on('tool(test)', function (obj) { //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的DOM对象

            if (layEvent === 'process') { //查看
                console.log(data);
                var url = "";
               
                switch (data.StatesName) {
                    case "转班":
                        url = "/Teachingquality/StudentTransaction/Transactiondetails?ID=" + data.ID;
                        break;
                    case "重修":
                        url = "/Teachingquality/StudentTransaction/Rebuilddetailed?ID=" + data.ID;
                        break;
                }
                layer.open({
                    type: 2,
                    content: url
                    , area: ['800px','600px']
                    , title: "学员异动处理"
                    , end: function () { table.reload('idTest'); }
                    , shade: 0.3
                    , anim: 1
                  

                });
             
            }

        });


        //查询功能
        form.on('submit(demo2)', function (data) {

            var x = data.field;
            if (x.ClassNumber == "" && x.Major_Id == "" && x.grade_Id == "" && x.BaseDataEnum_Id == "") {
                layer.msg("至少选择一个查询", {
                    time: 5000, //20s后自动关闭
                    btn: ['确定']
                });
            } else {
                table.reload('idTest', {
                    where: {
                        ClassNumber: x.ClassNumber,
                        Major_Id: x.Major_Id,
                        grade_Id: x.grade_Id,
                        BaseDataEnum_Id: x.BaseDataEnum_Id
                    }, page: {
                        curr: 1
                    }
                });
            }


            return false;
        });



    });
</script>
