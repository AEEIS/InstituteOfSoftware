
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Index</h2>
<table class="layui-hide" id="test" lay-filter="test"></table>


@section script{
    @*头部工具栏*@
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-sm" lay-event="getAdd"><i class="layui-icon">&#xe654;</i>学员注册</button>
            <button class="layui-btn layui-btn-sm" lay-event="getUpdate"> <i class="layui-icon">&#xe642;</i>编辑学员信息</button>
  
        </div>
    </script>
    <script>
        layui.use(['table', 'layer', 'tree', 'form'], function () {
            var table = layui.table;
            var layer = layui.layer;
            table.render({
                elem: '#test'
                , url: '/Teachingquality/StudentInformation/GetDate'
                , toolbar: '#toolbarDemo'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { field: 'StudentNumber', width: 80, title: '学号', sort: true }
                    , { field: 'Name', width: 80, title: '姓名' }
                    , { field: 'Sex', width: 80, title: '性别' }
                    , { field: 'identitydocument', width: 80, title: '身份证号', sort: true }
                    , { field: 'Nation', width: 180, title: '民族 ' }
                    , { field: 'Education', width: 180, title: '学历 ' }
                    , { field: 'Telephone', width: 80, title: '电话号' }
                    , { field: 'qq', width: 80, title: 'qq' }
                    , { field: 'WeChat', width: 80, title: '微信' }
                    , { field: 'Hobby', width: 180, title: '兴趣爱好 ' }
                    , { field: 'Familyaddress', width: 180, title: '家庭住址 ' }
                    , { field: 'BirthDate', width: 180, title: '出生日期 ' }
                    , { field: 'Traine', width: 180, title: '学员性格 ' }
                    , { field: 'Hobby', width: 180, title: '兴趣爱好 ' }
                    , { field: 'InsitDate', width: 180, title: '注册时间 ' }
                    , { field: 'Reack', width: 80, title: '备注' }
                    , { field: 'State', width: 80, title: '状态' }

                ]]
            });


            function Add(name, id) {
                console.log("aaa");
                layer.open({
                    title: name,
                    type: 2,
                    area: ['1000px', '800px']
                    , content: "/Teachingquality/StudentInformation/Registeredtrainees?id=" + id
                    , end: function () { table.reload('idTest'); select(); }
                    //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                });
            }
            table.on('toolbar(test)', function (obj) {
                switch (obj.event) {
                    case 'getAdd':
                        var a = "注册学员";
                        Add(a);
                        break;
                    case 'getUpdate':
                        if (checkStatus.data.length > 0 && checkStatus.data.length < 2) {

                            var a = "编辑学员信息"
                            var id = checkStatus.data[0].id;
                            Add(a, id)
                        } else {
                            layer.alert('请选择一条数据', { icon: 0 });
                        }
                        break;
                    case 'getDelete':
                        if (checkStatus.data.length > 0) {
                            layer.confirm('您真的要删除吗?', function (index) {
                                if (index > 0) {
                                    myliuw();
                                    layer.close(index);
                                }
                            });
                        } else {
                            layer.alert('至少选择一条数据', { icon: 0 });
                        }

                        break;

                };
        });

        });
    </script>

}


