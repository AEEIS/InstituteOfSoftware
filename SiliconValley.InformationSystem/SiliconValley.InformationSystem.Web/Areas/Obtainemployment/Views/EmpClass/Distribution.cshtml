
@{
    Layout = null;
}
@using SiliconValley.InformationSystem.Entity.MyEntity
@model ClassSchedule
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registeredtrainees</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Areas/Obtainemployment/Scripts/Drawing.js"></script>
    <script src="~/Scripts/underscore.js"></script>
    <style>
        canvas {
            border: 1px solid #A4E2F9;
        }
    </style>
    <style>

        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            width: 200px;
        }




        #jiben input {
            border: 0px solid #ffffff;
        }

        label {
            font-size: 18px;
        }
    </style>

</head>
<body>
    <form class="layui-form">
        <h1 style="text-align:center;height:50px;">分配班级</h1>
        <div>
            <div class="layui-container">
                <fieldset id="jiben">

                    <legend>班级基本信息</legend>

                    <div class="layui-row layui-form-item">

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">班级编号:</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(a=>a.ClassNumber,new { @class = "layui-input", @readonly = "d" })
                            </div>
                        </div>

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">阶段:</label>
                            <div class="layui-input-inline">
                                @*@Html.TextBoxFor(t => t.emp.EmployeeId, new { @class = "layui-input", @readonly = "d" })*@
                            </div>
                        </div>

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">就业方向:</label>
                            <div class="layui-input-inline">
                                @*@Html.TextBoxFor(t => t.emp.Phone, new { @class = "layui-input", @readonly = "d" }*@

                            </div>
                        </div>

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">班级人数:</label>
                            <div class="layui-input-inline">
                                @*<input type="tel" name="birhday" readonly id="birhday" class="layui-input" value="@Model.emp.Birthdate">*@


                            </div>
                        </div>


                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">

                            <label class="layui-form-label">S3班主任姓名:</label>
                            <div class="layui-input-inline">

                                @*<input type="radio" name="sex" value="@Model.emp.Sex" checked title="@Model.emp.Sex">*@

                            </div>
                        </div>


                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">

                            <label class="layui-form-label">S3班主任电话:</label>
                            <div class="layui-input-inline">

                                @*<input class="layui-input" type="text" name="sex" value="@Model.Department.DeptName">*@

                            </div>
                        </div>

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">

                            <label class="layui-form-label">代课老师姓名:</label>
                            <div class="layui-input-inline">

                                @*<input class="layui-input" type="text" name="sex" value="@Model.Position.PositionName">*@

                            </div>
                        </div>
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">代课老师电话:</label>
                            <div class="layui-input-inline">
                                @*@Html.TextBoxFor(t => t.Areas.AreaName, new { @class = "layui-input", @readonly = "d" }*@
                            </div>
                        </div>
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">未学习课程:</label>
                            <div class="layui-input-block">
                                @*@{ foreach (var item in Model.ClassSchedulesing)
                                        {
                                            <button type="button" class="layui-btn">@item.ClassNumber</button>
                                        }
                                    }*@
                            </div>
                        </div>
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">已完成课程:</label>
                            <div class="layui-input-block">
                                @*@{ foreach (var item in Model.ClassSchedulesing)
                                        {
                                            <button type="button" class="layui-btn">@item.ClassNumber</button>
                                        }
                                    }*@
                            </div>
                        </div>


                        <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                            <label class="layui-form-label">学生调研分析图:</label>
                            <div class="layui-input-block">
                                <div height="400" width="600" style="margin:50px">
                                    <canvas id="chart"> 你的浏览器不支持HTML5 canvas </canvas>
                                </div>
                            </div>
                        </div>
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">未调研学生:</label>
                            <div class="layui-input-block">
                                @*@{ foreach (var item in Model.ClassSchedulesing)
                                        {
                                            <button type="button" class="layui-btn">@item.ClassNumber</button>
                                        }
                                    }*@
                            </div>
                        </div>
                    </div>

                </fieldset>
                <fieldset>

                    <legend>选择专员</legend>
                    <div class="layui-col-xs9 layui-col-sm9 layui-col-md9">
                        <label class="layui-form-label">专员列表:</label>
                        <div class="layui-input-inline">
                            @Html.DropDownList("stafflist", ViewBag.EmpStaff as List<SelectListItem>, new Dictionary<string, object> { { "lay-filter", "mystafflist" }, { "id", "mystafflist" } })
                        </div>
                        <div class="layui-input-inline">
                            <button type="button" onclick="distributionbtn()" class="layui-btn layui-btn-radius layui-btn-warm">确认</button>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>专员信息</legend>
                    <div class="layui-row layui-form-item">
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">正带班级:</label>
                            <div class="layui-input-block" id="classlist">

                            </div>
                        </div>
                    </div>

                </fieldset>
            </div>

        </div>
    </form>

    @*按钮模板*@
    <script type="text/template" id="muban">
        <button type="button" class="layui-btn">{{=content}}</button>
    </script>

    <script>
        jQuery(function () {
            var data = JSON.parse('@Html.Raw(ViewBag.pielist)');
            var arr= jsontoarr(data);
            goChart(arr);
            var staffid = $("#mystafflist").val();
            showclassing(staffid);

        });
        function showclassing(jsempstaffid) {
             $.ajax({
                    type: "get",
                    url: "/Obtainemployment/EmpClass/GetClassList/",
                    timeout: 5000,
                    data: { empstaffid: jsempstaffid },
                    async: true,
                    success: function (data) {
                        //删除div中所有的按钮
                        $("#classlist").children().remove();
                        if (data.length<1) {
                            var compiled = _.template($("#muban").html());
                            var html = compiled({ content: "暂无" });
                            $("#classlist").append($(html));
                        }
                        if (data.length>0) {
                            for (var i = 0; i < data.length; i++) {
                            var compiled = _.template($("#muban").html());
                                var jsclassnumber = data[i].ClassNumber;
                                console.log(jsclassnumber   );
                            var html = compiled({ content: jsclassnumber });
                            $("#classlist").append($(html));
                             }
                        }

                    },
                    error: function () {

                    }
                });
        }
        function distributionbtn() {
           
            var staffid = $("#mystafflist").val();
            var jsclassno = $("#ClassNumber").val();
            $.ajax({
                type: "POST",
                url: "/Obtainemployment/EmpClass/ClassToEmpstaff/",
                async: true,
                data: { ClassNO:jsclassno,empstaffid:staffid },
                success: function (data) {
                   
                    if (data.Success) {
                      
                        layer.msg(data.Msg, { icon: 1 }, function () {
                            //先得到当前iframe层的索引
                            var index = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(index); //再执行关闭
                        })
                    } else {
                        layer.msg("分配失败，请重新刷新页面！");  
                    }
                },
                error: function (data) {

                }
            });
        }
        layui.use(['form', 'laydate'], function () {

            var birhday = $("#birhday").val();

            var date = new Date(birhday);

            var year = date.getFullYear();

            var mouth = date.getMonth() + 1;

            var day = date.getDate();

            var birhday = $("#birhday").val(year + '年' + mouth + '月' + day + '日');

            var form = layui.form;
            var laydate = layui.laydate;

            form.on('select(mystafflist)', function (data) {
                var jsempstaffid = data.value;
                showclassing(jsempstaffid);
            });

        });
    </script>
</body>
</html>
