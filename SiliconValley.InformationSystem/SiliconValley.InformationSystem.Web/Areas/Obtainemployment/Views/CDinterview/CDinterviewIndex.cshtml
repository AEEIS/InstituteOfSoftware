    <div id="div1" style=" width:29%;float:left;@*border:1px solid red;*@">
        <div id="topdiv">
            <div id="mystudentwhytop">
                <form class="layui-form" action="">
                    <div class="layui-form-item">
                        <div class="layui-inline" id="mubandiv">
