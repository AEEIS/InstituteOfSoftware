
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="layui-btn-group demoTable">
        <button class="layui-btn" data-type="getCheckLength">显示全部企业</button>
        <button class="layui-btn" data-type="getCheckData">显示合作企业</button>
        <button class="layui-btn" data-type="isAll">显示可挖掘的合作企业</button>
        <button class="layui-btn" data-type="AddCooperaEnterprises">添加合作企业</button>
    </div>

    <table class="layui-hide" id="Enterprise" lay-filter="EnterpriseInfo"></table>

    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>

    <script>
        layui.use(['table', 'layer'], function () {
            var table = layui.table;
            var layer = layui.layer; //layui对象
           
            //监听表格复选框选择
            table.on('checkbox(EnterpriseInfo)', function (obj) {
                console.log(obj)
            });

            //展示已知数据
            table.render({
                elem: '#Enterprise'
                , url: '/Employment/SearchEnterpriseInfo' //数据接口
                , page: true //开启分页
                , limits: [20, 40, 60]
                , cols: [[ //标题栏
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'EnterpriseInfoID', title: '企业信息ID', width: 80, sort: true }
                    , { field: 'EntName', title: '企业名称', width: 120 }
                    , { field: 'EntAddress', title: '企业地址', minWidth: 20, width: 120 }
                    , { field: 'EntScale', title: '规模', minWidth: 160 }
                    , { fixed: 'EntNature', title: '规模', width: 178 }
                    , { fixed: 'EntSalary', title: '薪资', width: 178 }
                    , { fixed: 'EntWelfare', title: '福利', width: 178 }
                    , { fixed: 'EmploymentStaffName', title: '录入人姓名', width: 178 }
                    , { fixed: 'Remark', title: '备注', width: 178 }
                    , { fixed: 'CooperaEnterprisesID', title: '合作企业ID', width: 178 }
                    , { fixed: 'EntContacts', title: '联系人', width: 178 }
                    , { fixed: 'EntPhone', title: '联系电话', width: 178 }
                    , { fixed: 'right', width: 178, align: 'center', toolbar: '#barDemo' }
                ]]

            });
            //监听工具条
            table.on('tool(EnterpriseInfo)', function (obj) {
                var data = obj.data;

                if (obj.event === 'detail') {
                    layer.msg('ID：' + data.ID + ' 的查看操作');
                } else if (obj.event === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                      
                        $.post("/Employment/DelEnterpriseInfo/" + data.ID, function (data) {
                            table.reload('Enterprise', {
                                page: {
                                    curr: 1 //重新从第 1 页开始
                                }
                            });
                        });
                        layer.close(index);
                    });
                } else if (obj.event === 'edit') {
                    //layer.alert('编辑行：<br>' + JSON.stringify(data))
                    console.log(data.ID);
                    layer.open({
                        type: 2
                        , area: ["500px", "420px"]
                        , title: "弹出层"
                        , content: '/Employment/EditEnterprise/' + data.ID
                        , end: function () {
                            table.reload('Enterprise', {
                                page: {
                                    curr: 1 //重新从第 1 页开始
                                }
                            });
                            console.log("222");
                        }
                    });
                }
            });

            var $ = layui.$, active = {
                getCheckData: function () { //获取选中数据
                    var checkStatus = table.checkStatus('Enterprise')
                        , data = checkStatus.data;
                    layer.alert(JSON.stringify(data));
                }
                , getCheckLength: function () { //获取选中数目
                    var checkStatus = table.checkStatus('Enterprise')
                        , data = checkStatus.data;
                    layer.msg('选中了：' + data.length + ' 个');
                }
                , isAll: function () { //验证是否全选
                    var checkStatus = table.checkStatus('Enterprise');
                    layer.msg(checkStatus.isAll ? '全选' : '未全选')
                }
                , AddCooperaEnterprises: function () {
                    layer.open({
                        type: 2
                        , area: ["500px", "420px"]
                        , title: "添加合作企业信息"
                        , content: '/Employment/AddEnterprise'
                        , end: function () {
                            console.log("111");
                            table.reload('Enterprise', {
                                page: {
                                    curr: 1 //重新从第 1 页开始
                                }
                            });
                            console.log("222");
                        }
                    });

                }
            };

            $('.demoTable .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });
        });
    </script>
