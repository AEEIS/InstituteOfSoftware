@using SiliconValley.InformationSystem.Entity.MyEntity
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Proposition</title>


    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" /

</head>
<body>

    <form class="layui-form">
        <div style="" class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">阶段</label>
                <div class="layui-input-inline">
                    <select lay-filter="major">
                        <option value="0">请选择</option>
                        @{
                            foreach (var item in ViewBag.grand as List<Grand>)
                            {
                                <option value="@item.Id">@item.GrandName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">课程</label>
                <div class="layui-input-inline">
                    <select lay-verify="required" name="course" id="course">
                        <option selected value="0"></option>
                    </select>
                </div>
            </div>

            <div class="layui-inline">
                <button class="layui-btn layui-btn-primary" lay-submit="" lay-filter="search">查询相同</button>

            </div>
        </div>
        <hr />
    </form>
    <table class="layui-hide" lay-filter="QuestionsBankS" id="QuestionsBankS"></table>
    <!--头部工具栏-->
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button type="button" class="layui-btn layui-btn-sm btn-info" onclick="QC()">去重</button>
        </div>
    </script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Areas/Teaching/Scripts/Ajax.js"></script>
    <script>
        function escapeHTMLString(str) {
            str = str.replace(/</g, '&lt;');
            str = str.replace(/>/g, '&gt;');

            return str;
        }
        layui.use(['table', 'layer', 'form'], function () {

            var form = layui.form;
            var layer = layui.layer;
            var table = layui.table;

            $(".layui-layer-input").attr("type", "number")

            //下拉框联动
            form.on('select(major)', function (data) {
                var value = data.value;  //select选中的值
                console.log("选中值" + value);
                $.ajax({
                    url: "/ExaminationSystem/QuestionsBank/CourseDataBYGrind",
                    data: { grandid: value },
                    dataType: "json",
                    success: function (resultData) {
                        if (resultData.length > 0) {
                            //清空赋值
                            $("#course").empty();
                            console.log(resultData);
                            $("#course").append(new Option("请选择项目", 0));
                            $.each(resultData, function (index, item) {
                                //赋值
                                $('#course')
                                    .append(new Option(item.CourseName, item.CurriculumID));
                            });
                        } else {
                            $("#course").empty();
                            $("#course").append(new Option("暂无数据", 0));
                        }
                        layui.form.render("select");
                    }
                });
            });
            //查询
            form.on('submit(search)', function (data) {

                console.log(data.field)


                table.reload('QuestionsBankS', {

                    url: '/ExaminationSystem/QuestionsBank/Search'
                    , where: data.field
                });

                return false;
            });

            //渲染表格
            table.render({
                elem: '#QuestionsBankS'
                , toolbar: '#toolbarDemo'
                , id: "QuestionsBankS"
                , url: '/ExaminationSystem/QuestionsBank/ChoiceQuestionTableData'
                , cellMinWidth: 80
                , cols: [[
                    { field: 'Id', width: 80, title: 'ID', hide: true, sort: true }
                    , {
                        field: 'Title', width: 200, title: '题目', templet: function (res) {

                            var result = escapeHTMLString(res.Title);

                            return result;

                        }
                    } , {
                        field: 'IsRadio', title: '单选/多选', sort: true, templet: function (data) {

                            if (data.IsRadio == true) {

                                return "单选";
                            }
                            else {
                                return "多选";
                            }

                        }, width: 150
                    },
                    { field: 'Answer', width: 80, title: '答案' },
                    { field: 'EmpName', width: 80, title: '命题人', templet: '<div>{{d.Proposition.EmpName}}</div>' },
                    {
                        field: 'CourseName', width: 120, title: '所属课程', templet: function (res) {


                            if (res.Course == null) {
                                return "升学题目";
                            }
                            else {
                                return res.Course.CourseName
                            }


                        }
                    }

                ]],
                page: true
            });


            //头工具栏事件
            table.on('toolbar(QuestionsBankS)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id);
               switch (obj.event) {
                    case 'QC':
                        layer.confirm('确认去重吗?', function (index) {
                            layer.close(index);
                        });
                        break;
                };
            });
        });
    </script>
    </body>
</html>