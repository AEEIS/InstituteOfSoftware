
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.RecruitPhoneTrace
@using SiliconValley.InformationSystem.Entity.MyEntity;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Addrpt</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            height: 120px;
        }
    </style>

</head>
<body>
    <div>
        <form class="layui-form" action="">
            <div class="layui-container">

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">姓名</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.Name, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入姓名" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">应聘岗位</label>
                        <div class="layui-input-block">
                            <select name="Pid" id="Pid" lay-verify="required" lay-filter="pidfilter">
                                <option value="-1">请选择应聘的岗位</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">手机号</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.PhoneNumber, new Dictionary<string, object>() { { "lay-verify", "required|number" }, { "placeholder", "请输入手机号码" }, { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">追踪时间</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.TraceTime, new Dictionary<string, object>() { { "lay-verify", "TraceTime" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">渠道</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Channel, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">简历类型</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ResumeType, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                </div>
             
                    <div class="layui-row layui-form-item">
                        <label class="layui-form-label">电话沟通结果</label>
                        <div class="layui-input-block" style="width:100%;">
                            @Html.TextBoxFor(a => a.PhoneCommunicateResult, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">初试日期</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.FirstInterviewDate, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">是否面试</label>
                        <div class="layui-input-block">
                            <input type="radio" name="IsInterview" value="True" title="是" checked="">
                            <input type="radio" name="IsInterview" value="False" title="否" checked="">
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">初试结果</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.FirstInterviewResult, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">复试日期</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.RetestDate, new Dictionary<string, object>() { { "lay-verify", "RetestDate" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">复试结果</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.RetestResult, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">Offer时间</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.OfferGiveTime, new Dictionary<string, object>() { { "lay-verify", "OfferGiveTime" }, { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">预计入职时间</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.PlanEntryTime, new Dictionary<string, object>() { { "lay-verify", "PlanEntryTime" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">是否入职</label>
                        <div class="layui-input-inline">
                            <input type="radio" name="IsEntry" value="True" title="是" >
                            <input type="radio" name="IsEntry" value="False" title="否" checked="">
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                        <label class="layui-form-label">备注</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Remark, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>

                </div>

            </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1" style="margin-left:300px;">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期验证
            laydate.render({
                elem: '#TraceTime',
            });
            laydate.render({
                elem: '#FirstInterviewDate',
            }); 
            laydate.render({
                elem: '#RetestDate',
            }); 
            laydate.render({
                elem: '#OfferGiveTime',
            }); 
            laydate.render({
                elem: '#PlanEntryTime',
            }); 
            //动态绑定岗位属性的下拉框的值
            $.ajax({
                url: '/Personnelmatters/RecruitingDataSummary/BindPidSelect',
                dataType: 'json',
                type: 'get',
                success: function (data) {
                    console.log(data.data);
                    $.each(data.data, function (index, item) {
                        $('#Pid').append(new Option(item.PositionName, item.Pid));// 下拉菜单里添加元素
                    });
                    layui.form.render("select");
                    //重新渲染 固定写法
                }
            });

            //添加提交
            form.on('submit(demo1)', function (data) {
                $.post("/Personnelmatters/RecruitingDataSummary/Addrpt", data.field, function (data) {
                    if (data.Success) {
                        layer.alert("添加成功!", { icon: 1 }, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layui.table.reload('myrptData');
                            parent.layer.close(index);

                        });
                    } else {
                        layer.alert("添加失败!");
                    }
                });
                return false;
            });


            //关闭添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });
      
        });
    </script>


</body>
</html>

