
@{
    Layout = null;
}

<!DOCTYPE html>
@model SiliconValley.InformationSystem.Entity.MyEntity.RecruitPhoneTrace
@using SiliconValley.InformationSystem.Entity.MyEntity;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editrpt</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            height: 120px;
        }
    </style>
</head>
<body>
    <div>
        <form class="layui-form" action=""  lay-filter="formtest">
                <input type="hidden" name="Id" id="Id" value="@ViewBag.id"  readonly class="layui-input">
            <div class="layui-container">

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">姓名</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.Name, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">应聘岗位</label>
                        <div class="layui-input-block">
                            @Html.DropDownListFor(a => a.Pid,ViewBag.pname as SelectList, new Dictionary<string, object>() { { "disabled", "true" }, { "class", "layui-input " } })
                       </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">手机号</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.PhoneNumber, new Dictionary<string, object>() { { "lay-verify", "phone" }, { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">追踪时间</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.TraceTime, new Dictionary<string, object>() { { "disabled", "true" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">渠道</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Channel, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">简历类型</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ResumeType, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">
                    <label class="layui-form-label">电话沟通结果</label>
                    <div class="layui-input-block" style="width:90%;">
                        @Html.TextBoxFor(a => a.PhoneCommunicateResult, new Dictionary<string, object>() { { "class", "layui-input " } })
                    </div>
                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">初试日期</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.FirstInterviewDate, new Dictionary<string, object>() { { "lay-verify", "FirstInterviewDate" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">是否面试</label>
                        <div class="layui-input-block">
                            <input type="radio" name="IsInterview" value="true" title="是">
                            <input type="radio" name="IsInterview" value="false" title="否">
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">初试结果</label>
                        <div class="layui-input-block">
                            <input type="radio" name="FirstInterviewResult" value="通过" title="通过">
                            <input type="radio" name="FirstInterviewResult" value="未通过" title="未通过">
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">复试日期</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.RetestDate, new Dictionary<string, object>() { { "lay-verify", "RetestDate" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">复试结果</label>
                        <div class="layui-input-block">
                            <input type="radio" name="RetestResult" value="-1" title="未复试">
                            <input type="radio" name="RetestResult" value="通过" title="通过">
                            <input type="radio" name="RetestResult" value="未通过" title="未通过">
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">Offer时间</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.OfferGiveTime, new Dictionary<string, object>() { { "lay-verify", "OfferGiveTime" }, { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">预计入职时间</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.PlanEntryTime, new Dictionary<string, object>() { { "lay-verify", "PlanEntryTime" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">是否入职</label>
                        <div class="layui-input-inline">
                            <input type="radio" name="IsEntry" value="true" title="是">
                            <input type="radio" name="IsEntry" value="false" title="否">
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                        <label class="layui-form-label">备注</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Remark, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>

                </div>

            </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1" style="margin-left:300px;">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>


    <script>
        $(function () {
            loadrpt();// 初始化编辑数据加载
        });
        function loadrpt() {
            var Id = $("#Id").val();
                $.get("/Personnelmatters/RecruitingDataSummary/GetrptById/" + Id, function (data) {
                    layui.use(['layer', 'form', 'table'], function () {
                        var form = layui.form;
                        console.log("初始数据："+data);
                        data.IsInterview = data.IsInterview.toString();
                        data.IsEntry = data.IsEntry.toString();
                        data.TraceTime = GetYMD(data.TraceTime);
                        data.FirstInterviewDate = GetYMD(data.FirstInterviewDate);
                        data.RetestDate = GetYMD(data.RetestDate);
                        data.OfferGiveTime = GetYMD(data.OfferGiveTime);
                        data.PlanEntryTime = GetYMD(data.PlanEntryTime);
                        if (data.RetestResult == null) {
                            data.RetestResult = "-1";
                        }
                        //layui.form.render();
                        form.val("formtest", data);

                    });
                })
        }


        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期验证
            laydate.render({
                elem: '#FirstInterviewDate',
            });
            laydate.render({
                elem: '#RetestDate',
            });
            laydate.render({
                elem: '#OfferGiveTime',
            });
            laydate.render({
                elem: '#PlanEntryTime',
            });

            //编辑提交
            form.on('submit(demo1)', function (data) {
                console.log("提交的数据：" + data);
                $.post("/Personnelmatters/RecruitingDataSummary/Editrpt", data.field, function (data) {
                    console.log("成功返回的数据："+data);
                    if (data.Success) {
                        layer.alert("编辑成功!", { icon: 1 }, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layui.table.reload('myrptData');
                            parent.layui.table.reload('myRecruitData');
                            parent.layer.close(index);

                        });
                    } else {
                        layer.alert("添加失败!");
                    }
                });
                return false;
            });


            //关闭添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });

        });



        //格式化时间
        //只显示年月
        function GetYearAndMonth(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month;
            } else {
                return "";
            }
        }
        //显示年月日
        function GetYMD(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month + "-" + currentDate;
            } else {
                return "";
            }
        }
    </script>
</body>
</html>
