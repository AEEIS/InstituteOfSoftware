
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.TalentDemandPlan
@using SiliconValley.InformationSystem.Entity.MyEntity;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddTalantDemand</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            height:150px;
        }
    </style>

</head>
<body>
    <div>
        <form class="layui-form" action="" lay-filter="addfilter">
            <div class="layui-container">

                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">所属部门</label>
                        <div class="layui-input-block">
                            <select name="DeptId" id="DeptId" lay-filter="deptidfilter" lay-verify="required">
                                <option value="-1">请选择所属部门</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">所属岗位</label>
                        <div class="layui-input-block">
                            <select name="Pid" id="Pid" lay-verify="required" lay-search=""></select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">需求人数</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.DemandPersonNum, new Dictionary<string, object>() { { "lay-verify", "required" }, { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">负责人</label>
                        <div class="layui-input-block">
                            <select name="EmployeeId" id="EmployeeId" lay-verify="required" lay-filter="empfilter" >
                                <option value="-1">请选择负责人</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">预入职时间</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.PlanEntryTime, new Dictionary<string, object>() { { "lay-verify", "PlanEntryTime" } ,{ "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">需求申请时间</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ApplyTime, new Dictionary<string, object>() { { "lay-verify", "ApplyTime" }, { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">岗位职责</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.PositionStatement, new Dictionary<string, object>() {  { "class", "layui-input linu" } })
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">岗位要求</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.PositionRequest, new Dictionary<string, object>() {{ "class", "layui-input linu" } })
                        </div>
                    </div>
                </div>

                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">招聘原因</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.RecruitReason, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">备注</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Remark, new Dictionary<string, object>() {  { "class", "layui-input linu" } })
                        </div>
                    </div>
                </div>

            </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1" style="margin-left:300px;">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期验证
            laydate.render({
                elem: '#PlanEntryTime'
            });
            laydate.render({
                elem: '#ApplyTime',
            });

            //动态绑定负责人属性的下拉框的值
            $.ajax({
                url: '/Personnelmatters/RecruitingDataSummary/BindEmpSelect',
                dataType: 'json',
                type: 'get',
                success: function (data) {
                    console.log(data.data);
                    $.each(data.data, function (index, item) {
                        $('#EmployeeId').append(new Option(item.EmpName, item.EmployeeId));// 下拉菜单里添加元素
                    });
                    layui.form.render("select");
                    //重新渲染 固定写法
                }
            });


            //添加提交
            form.on('submit(demo1)', function (data) {
                $.post("/Personnelmatters/RecruitingDataSummary/AddTalantDemand", data.field, function (data) {
                    if (data.Success) {
                        layer.alert("添加成功!", { icon: 1 }, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layui.table.reload('mytdpData');
                            parent.layer.close(index);

                        });
                    } else {
                        layer.alert("添加失败!");
                    }
                });
                return false;
            });



            //关闭添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });

        });
    </script>

    @*部门与岗位的下拉框动态赋值及下拉框二级联动*@
    <script>
        layui.use(['form', 'upload', 'layer'], function () {

            var form = layui.form;
            $.ajax({
                url: '/Personnelmatters/EmployeesInfo/BindDeptSelect',
                data: {},
                dataType: "json",
                success: function (resultData) {
                    $("#DeptId").empty();
                    if (resultData.code == 0) {

                        $("#DeptId").append(new Option("请选择项目", ""));
                        $.each(resultData.data, function (index, item) {
                            $('#DeptId')
                                .append(new Option(item.DeptName, item.DeptId));
                        });
                    } else {
                        $("#DeptId").append(new Option("暂无数据", ""));
                    }

                    layui.form.render("select");
                }
            });

            //级联子项目
            //select 监听
            form.on('select(deptidfilter)', function (data) {
                var value = data.value;  //select选中的值
                console.log("选中值" + value);
                $.ajax({
                    url: "/Personnelmatters/EmployeesInfo/BindPositionSelect",
                    data: { deptid: value },
                    dataType: "json",
                    success: function (resultData) {
                        if (resultData.code == 0) {
                            //清空赋值
                            $("#Pid").empty();
                            console.log(resultData.data);
                            $("#Pid").append(new Option("请选择项目", ""));
                            $.each(resultData.data, function (index, item) {
                                //赋值
                                $('#Pid')
                                    .append(new Option(item.PositionName, item.Pid));
                            });
                        } else {
                            $("#Pid").append(new Option("暂无数据", ""));
                        }
                        layui.form.render("select");
                    }
                });
            })
            layui.form.render("select");

        });
    </script>
</body>
</html>

