
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.Department

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> DeptUpdate</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            width: 200px;
        }
    </style>
</head>
<body>
    <div>
        <form class="layui-form" action="">
                <div class="layui-row layui-form-item" style="margin-top:50px;">

                        <label class="layui-form-label">部门名称</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.DeptName, new Dictionary<string, object>() { { "lay-verify", "required|dName" }, { "placeholder", "请输入部门名称" }, { "class", "layui-input " } })
                        </div>
                </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //自定义验证部门名称是否已重复
            form.verify({
                dName: function (value, item) { //value：表单的值、item：表单的DOM对象
                    console.log(value);
                    var checkResult = "";
                    $.ajax({
                        url: "/Personnelmatters/EmployeesInfo/VerifyDname",
                        type: "post",
                        data: { dname: value },
                        async: false,
                        success: function (result) {
                            console.log(result);
                            if (result.Success) {
                                checkResult = "该部门已存在";
                            }
                        }
                    });
                    return checkResult;
                }
           
            });


            //添加部门提交
            form.on('submit(demo1)', function (data) {
              
                $.post("/Personnelmatters/EmployeesInfo/AddDept", data.field, function (data) {
                    console.log("部门："+data);
                    if (data.Success) {
                        layer.alert("添加成功!", { icon: 1 }, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                         //   parent.layui.table.reload('myDept');
                            parent.layer.close(index);

                        });
                    } else {
                        layer.alert("添加失败!");
                    }
                });
                return false;
            });

            //关闭部门添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });
        });
    </script>


</body>
</html>
