
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.EmployeesInfo
@using SiliconValley.InformationSystem.Entity.MyEntity;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditEmp</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            height: 120px;
        }

    
    </style>

</head>
<body>
    <div>
        <form class="layui-form" action="" lay-filter="formtest">
            <div class="layui-container" style="margin-top:20px;">
                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">员工编号:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.EmployeeId, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input " } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">姓名:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.EmpName, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">性别:</label>
                        <div class="layui-input-block">
                            <input type="radio" name="Sex" value="男" title="男">
                            <input type="radio" name="Sex" value="女" title="女">
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">所属部门:</label>
                        <div class="layui-input-inline">
                            <input type="text" id="dname" name="dname"  readonly class="layui-input" />
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">所属岗位:</label>
                        <div class="layui-input-inline">
                            <input type="text" id="pname" name="pname"  readonly class="layui-input" />
                            <input type="hidden" id="PositionId" name="PositionId"   class="layui-input" />
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">钉钉工号:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.DDAppId, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">年龄:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.Age, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">民族:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.Nation, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">手机号码:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.Phone, new Dictionary<string, object>() {{ "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">身份证号:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.IdCardNum, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">入职时间:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.EntryTime, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">转正日期:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.PositiveDate, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">合同起始时间:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.ContractStartTime, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">合同终止时间:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.ContractEndTime, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">生日:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.Birthday, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">紧急联系电话:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.UrgentPhone, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">学历:</label>
                        <div class="layui-input-block" style="width:190px;">
                            <select name="Education" id="Education">
                                <option value="大专">大专</option>
                                <option value="博士">博士</option>
                                <option value="硕士">硕士</option>
                                <option value="本科">本科</option>
                                <option value="高中">高中</option>
                                <option value="中专">中专</option>
                                <option value="初中">初中</option>
                                <option value="小学">小学</option>
                                <option value="群众">群众</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">婚姻状态:</label>
                        <div class="layui-input-block" style="width:190px;">
                            <input type="radio" name="MaritalStatus" value="false" title="未婚">
                            <input type="radio" name="MaritalStatus" value="true" title="已婚">
                        </div>
                    </div>
                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">户籍地址:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.DomicileAddress, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">现居地址:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Address, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">身份证有效期:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.IdCardIndate, new Dictionary<string, object>() {{ "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">政治面貌:</label>
                        <div class="layui-input-block" style="width:190px;">
                            <select name="PoliticsStatus" id="PoliticsStatus" >
                                <option value="党员">党员</option>
                                <option value="团员">团员</option>
                                <option value="群众">群众</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">社保起始月份:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.SSStartMonth, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">银行卡号:</label>
                        <div class="layui-input-block" style="width:190px;">
                            @Html.TextBoxFor(a => a.BCNum, new Dictionary<string, object>() { { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">试用期工资:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.ProbationSalary, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input salary" } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label" >转正后工资:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            @Html.TextBoxFor(a => a.Salary, new Dictionary<string, object>() { { "readonly", "true" }, { "class", "layui-input salary" } })
                        </div>
                        <i class="layui-icon layui-icon-tips myicon" style="font-size: 20px; color: #ff6a00;"></i>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">材料:</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Material, new Dictionary<string, object>() {  { "class", "layui-input linu" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">工作经验:</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.WorkExperience, new Dictionary<string, object>() {  { "class", "layui-input linu" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">备注:</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Remark, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>
                </div>

            </div>

            <div class="layui-form-item" style="margin-left:400px;">
                <div class="layui-input-block">
                    <button class="layui-btn layui-btn-warm" lay-submit="" type="button" lay-filter="demo1">立即提交</button>
                    <button class="layui-btn layui-btn-warm" id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        $(function () {
            loadnetinfo();// 初始化编辑数据加载
        });
        function loadnetinfo() {
            var id = $("#EmployeeId").val();
            $.get("/Personnelmatters/EmployeesInfo/GetempById/" + id, function (data) {
                layui.use(['layer', 'form', 'table'], function () {
                    var form = layui.form;
                    data.Sex = data.Sex.toString();
                    data.MaritalStatus = data.MaritalStatus.toString();
                    // data.PoliticsStatus = data.PoliticsStatus.toString();
                    data.EntryTime = GetYMD(data.EntryTime);
                    data.PositiveDate = GetYMD(data.PositiveDate);
                    data.ContractStartTime = GetYMD(data.ContractStartTime);
                    data.ContractEndTime = GetYMD(data.ContractEndTime);
                    data.Birthdate = GetYMD(data.Birthdate);
                    data.IdCardIndate = GetYMD(data.IdCardIndate);
                    data.SSStartMonth = GetYearAndMonth(data.SSStartMonth);
                    form.val("formtest", data);

                });
            })
        }

      
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期
            var startTime = laydate.render({
                elem: '#ContractStartTime',
                done: function (value, date) {
                    console.log(value);
                    console.log(date);
                    endTime.config.min = {
                        year: date.year,
                        month: date.month - 1,//关键
                        date: date.date,
                        hours: date.hours,
                        minutes: date.minutes,
                        seconds: date.seconds
                    }
                }
            });//合同起始时间
            var endTime = laydate.render({
                elem: '#ContractEndTime',
                done: function (value, date) {
                    startTime.config.max = {
                        year: date.year,
                        month: date.month - 1,//关键
                        date: date.date,
                        hours: date.hours,
                        minutes: date.minutes,
                        seconds: date.seconds
                    }
                }
            });//合同终止时间
            laydate.render({
                elem: '#Birthdate',
          
            });//出生日期
            laydate.render({
                elem: '#SSStartMonth',
                 type: 'month'
            });//社保起始月份
            //小图标悬停事件
            window.onload = $(".myicon").each(function () {
                //将遍历到的类赋给li
                var li = $(this);
                li.hover(function () {
                    subtips=layer.tips('不可更改属性', li, { tips: [1, '#ff6700'], time: 30000 });
                }, function () {
                    layer.close(subtips);
                });
            });

            //添加提交
            form.on('submit(demo1)', function (data) {
                $.post("/Personnelmatters/EmployeesInfo/EditEmp", data.field, function (data) {
                    if (data.Success) {
                        layer.alert("编辑成功!", { icon: 1 }, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layui.table.reload('myEmpInfo');
                            parent.layer.close(index);
                        });
                    } else {
                        layer.alert("编辑失败!");
                    }
                });
                return false;
            });

            //关闭添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layui.table.reload('myEmpInfo');
                parent.layer.close(index);
            });

        });


        //格式化时间
        function GetYearAndMonth(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month;
            } else {
                return "";
            }
        }
        //显示年月日
        function GetYMD(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month + "-" + currentDate;
            } else {
                return "";
            }
        }
    </script>



</body>
</html>