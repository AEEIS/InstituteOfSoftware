    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期验证
            laydate.render({
                elem: '#EntryTime', 
            });//入职时间
            laydate.render({
                elem: '#ContractStartTime',
            });//合同起始时间
            laydate.render({
                elem: '#ContractEndTime',
            }); //合同终止时间
            laydate.render({
                elem: '#Birthdate',
            }); //出生日期
            laydate.render({
                elem: '#IdCardIndate',
            });//身份证有效期

            //自定义验证
            form.verify({
                myage: function (value, item) { 
                    if (value == '') {
                        return '';
                    } else {
                        if (!new RegExp("^(([0-9]|[1-9][1-9]|1[0-7][0-9])(\.[0-9]+)?|180)$").test(value)) {
                            return '年龄只能是非零的正整数';
                        }
                    }
                    
                },//年龄
                myIdCardNum: function (value,item) {
                    if (value == '') {
                        return '';
                    } else {
                        if (!new RegExp("^\d{15}|\d{18}$").test(value)) {
                            return '身份证号只有15位或18位';
                        }
                    }
                },//身份证号
                myUrgentPhone: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        if (!new RegExp("^(13[0-9]|14[5|7]|15[0|1|2|3|5|6|7|8|9]|18[0|1|2|3|5|6|7|8|9])\d{8}$ ").test(value)) {
                            return '号码格式输入错误';
                        }
                    }

                },//紧急联系电话
            });

            //添加提交
            form.on('submit(demo1)', function (data) {
                console.log("提交" + data);
                console.log(data.field);
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "/Personnelmatters/EmployeesInfo/AddEmpInfo",
                    data: { dataStr: data },
                    success: function (mycarid) {

                    }
                });
                return false;
            });
        });
            
    </script>

