
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.ViewEntity.EmpTransactionView
@using SiliconValley.InformationSystem.Entity.ViewEntity;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetEmpETRDetail</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>

    <div>
        <form class="layui-form" action="" id="Positive" lay-filter="Positive" hidden>
            @{
                List<EmpTransactionView> etrlist = ViewBag.ETRlist as List<EmpTransactionView>;
                foreach (var item in etrlist)
                {

            <fieldset>
                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">异动类型:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            <input type="text" value="@item.Transactionname" style="border:0px;" readonly class="layui-this" />
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">异动理由:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            <input type="text" value="@item.Reason" style="border:0px;" readonly class="layui-this" />
                        </div>
                    </div>

                </div>
                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">异动时间:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            <input type="text" value="@item.TransactionTime" style="border:0px;" readonly class="layui-this" />
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">备注:</label>
                        <div class="layui-input-inline" style="width:190px;">
                            <input type="text" value="@item.Remark" style="border:0px;" readonly class="layui-this" />
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item" id="Transferposition" >
                    <div class="layui-row layui-form-item">
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">调岗前部门:</label>
                            <div class="layui-input-block">
                                <input type="text" id="predname" name="predname" readonly class="layui-input" style="border:0px;" />
                            </div>
                        </div>
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">调岗前岗位:</label>
                            <div class="layui-input-block">
                                <input type="text" id="prepname" name="prepname" readonly class="layui-input" style="border:0px;" />
                            </div>
                        </div>

                    </div>
                    <div class="layui-row layui-form-item">
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">调岗前工资:</label>
                            <div class="layui-input-block">
                                <input type="text" id="PreviousSalary" name="PreviousSalary" readonly class="layui-input" style="border:0px;" />
                            </div>
                        </div>

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">调岗后部门:</label>
                            <div class="layui-input-block">
                                <input type="text" id="nowdname" name="nowdname" readonly class="layui-input" style="border:0px;" />
                            </div>
                        </div>
                    </div>
                    <div class="layui-row layui-form-item">

                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">调岗后岗位:</label>
                            <div class="layui-input-block">
                                <input type="text" id="nowpname" name="nowpname" readonly class="layui-input" style="border:0px;" />
                            </div>
                        </div>
                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                            <label class="layui-form-label">调岗后工资:</label>
                            <div class="layui-input-block">
                                <input type="text" id="PresentSalary" name="PresentSalary" readonly class="layui-input" style="border:0px;" />
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="layui-row layui-form-item" id="Increasesalary" >
                        <div class="layui-row layui-form-item">

                            <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                <label class="layui-form-label">加薪前工资:</label>
                                <div class="layui-input-block">
                                    <input type="text" id="PreviousSalary" name="PreviousSalary" readonly class="layui-input" style="border:0px;" />
                                </div>
                            </div>
                            <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                <label class="layui-form-label">加薪后工资:</label>
                                <div class="layui-input-block">
                                    <input type="text" id="balance" name="balance" readonly class="layui-input" style="border:0px;" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="layui-row layui-form-item" id="Contractrenewal" >
                        <div class="layui-row layui-form-item">
                            <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                <label class="layui-form-label" style="width:120px;margin-left:-40px;">前合同起始时间:</label>
                                <div class="layui-input-block">
                                    <input type="text" id="BeforeContractStartTime" name="BeforeContractStartTime" readonly class="layui-input" style="border:0px;" />
                                </div>
                            </div>
                            <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                <label class="layui-form-label" style="width:120px;margin-left:-40px;">前合同终止时间:</label>
                                <div class="layui-input-block">
                                    <input type="text" id="BeforeContractEndTime" name="BeforeContractEndTime" readonly class="layui-input" style="border:0px;" />
                                </div>
                            </div>

                        </div>
                      
                        <div class="layui-row layui-form-item">

                            <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                <label class="layui-form-label" style="width:120px;margin-left:-40px;">续签后起始时间:</label>
                                <div class="layui-input-block">
                                    <input type="text" id="AfterContractStartTime" name="AfterContractStartTime" readonly class="layui-input" style="border:0px;" />
                                </div>
                            </div>
                            <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                <label class="layui-form-label" style="width:120px;margin-left:-40px;">续签后终止时间:</label>
                                <div class="layui-input-block">
                                    <input type="text" id="AfterContractEndTime" name="AfterContractEndTime" readonly class="layui-input" style="border:0px;" />
                                </div>
                            </div>
                        </div>
                    </div>

</fieldset>

                }

            }
        </form>
    </div>

    <script>

        $(function () {
            loademp();// 初始化编辑数据加载
        });
        function loademp() {
            var id = $("#TransactionId").val();
            console.log(id);
            $.get("/Personnelmatters/EmpTransactionRecord/GetertById/" + id, function (data) {
                layui.use(['layer', 'form', 'table'], function () {
                    var form = layui.form;
                    if (data.type == "转正") {
                        $("#Positive").show();
                        data.EntryTime = GetYMD(data.EntryTime);
                        data.TransactionTime = GetYMD(data.TransactionTime);
                        form.val("Positive", data);
                    } else if (data.type == "离职") {
                        $("#Dimission").show();
                        data.EntryTime = GetYMD(data.EntryTime);
                        data.TransactionTime = GetYMD(data.TransactionTime);
                        console.log(data);
                        form.val("Dimission", data);
                    } else if (data.type == "调岗") {
                        $("#TransferPosition").show();
                        data.EntryTime = GetYMD(data.EntryTime);
                        data.TransactionTime = GetYMD(data.TransactionTime);
                        console.log(data);
                        form.val("TransferPosition", data);
                    }
                    else if (data.type == "加薪") {
                        $("#IncreaseSalary").show();
                        data.EntryTime = GetYMD(data.EntryTime);
                        data.TransactionTime = GetYMD(data.TransactionTime);
                        $("#balance").val(abs(data.PresentSalary - data.PreviousSalary));
                        console.log(data);
                        form.val("IncreaseSalary", data);
                    } else if (data.type == "续签") {
                        $("#ContractRenewal").show();
                        data.EntryTime = GetYMD(data.EntryTime);
                        data.TransactionTime = GetYMD(data.TransactionTime);
                        data.BeforeContractStartTime = GetYMD(data.BeforeContractStartTime);
                        data.BeforeContractEndTime = GetYMD(data.BeforeContractEndTime);
                        data.AfterContractStartTime = GetYMD(data.AfterContractStartTime);
                        data.AfterContractEndTime = GetYMD(data.AfterContractEndTime);
                        console.log(data.BeforeContractStartTime);
                        form.val("ContractRenewal", data);
                    }

                });
            })
        }

        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;


            //关闭页面
            $(".btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });
        });


        //格式化时间
        function GetYearAndMonth(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month;
            } else {
                return "";
            }
        }
        //显示年月日
        function GetYMD(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month + "-" + currentDate;
            } else {
                return "";
            }
        }
    </script>

</body>
</html>
