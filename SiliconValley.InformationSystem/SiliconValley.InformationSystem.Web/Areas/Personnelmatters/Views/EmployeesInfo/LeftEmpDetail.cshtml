                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.UrgentPhone, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">学历:</label>
                        <div class="layui-input-block">
                            <input type="text" id="Education" name="Education" readonly class="layui-input" style="border:0px;" />
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">婚姻状态:</label>
                        <div class="layui-input-block">
                            <input type="radio" name="MaritalStatus" id="MaritalStatus" value="false" title="未婚" readonly>
                            <input type="radio" name="MaritalStatus" value="true" title="已婚" readonly>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">户籍地址:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.DomicileAddress, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">现居地址:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Address, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label" style="margin-left:-40px;width:120px;">身份证有效期:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.IdCardIndate, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">政治面貌:</label>
                        <div class="layui-input-block">
                            <input type="text" id="PoliticsStatus" name="PoliticsStatus" readonly class="layui-input" style="border:0px;" />
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label" style="margin-left:-40px;width:120px;">社保起始月份:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.SSStartMonth, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">试用期工资:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ProbationSalary, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input salary" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">转正后工资:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Salary, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input salary" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">银行卡号:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.BCNum, new Dictionary<string, object>() { { "style", "border:0px" }, { "readonly", "true" }, { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
