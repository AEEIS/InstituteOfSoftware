
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmpTransactionRecord</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>

    @*操作栏*@
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="detail">异动详情查看</a>
    </script>

        <table id="etrTab" lay-filter="etrTab"></table>



    <script>
        layui.use(['table', 'layer', 'form', 'laydate', 'element'], function () {
            var table = layui.table;
            var layer = layui.layer;
            var form = layui.form;
            var laydate = layui.laydate;
            var element = layui.element;

            table.render({
                elem: '#etrTab'
                , url: '/Personnelmatters/EmployeesInfo/GetEtrData'
                , id: "myETR"
                , limits: [5, 10, 15, 20, 25, 30]
                , limit: 10
                , cols: [[
                    , { field: 'TransactionId',  width:38}
                    , { field: 'empName', title: '姓名', width: 160, sort: true }
                    , { field: 'type', title: '异动类型', width: 120, sort: true }
                    , { field: 'TransactionTime', title: '异动确认时间', sort: true, width: 140, templet: function (d) { return GetYMD(d.TransactionTime) } }
                    , { field: 'Remark', title: '备注', width: 315, sort: true }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 220 }
                ]]
                , page: true
            });

            //监听行工具事件
            table.on('tool(etrTab)', function (obj) {
                var data = obj.data;
                console.log(data.TransactionId);
                if (obj.event === 'edit') {
                    layer.open({
                        type: 2,
                        content: '/Personnelmatters/EmployeesInfo/EditETR/?id=' + data.TransactionId
                        , area: ["800px", "500px"]
                        , title: '编辑员工异动信息'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                    });
                } else if (obj.event === 'detail') {
                    layer.open({
                        type: 2,
                        content: '/Personnelmatters/EmployeesInfo/EmpETRDetail/?id=' + data.TransactionId
                        , area: ['700px', '500px'],
                        title: '员工异动详细信息'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                    });
                }
                else if (obj.event === 'date') {  //监听单元格日期编辑事件
                    var field = $(this).data('field');
                    laydate.render({
                        elem: this.firstChild,
                        show: true //直接显示
                        , type: 'month'
                        , btns: ['now', 'confirm']
                        , format: 'yyyy-MM-dd'
                        , done: function (value, date) {
                            $.ajax({
                                type: "get",
                                dataType: "json",
                                url: "/Personnelmatters/EmployeesInfo/EditDateCell",
                                data: { id: data.EmployeeId, endvalue: value },
                                success: function (data) {
                                    console.log(data.Msg);
                                    if (data.Success) {
                                        layui.table.reload('myEmpInfo');
                                    }
                                    else {
                                        layer.msg("修改失败!");
                                    }
                                }
                            });
                        }
                    });

                }
            });

          
        });


        //显示年月日
        function GetYMD(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month + "-" + currentDate;
            } else {
                return "";
            }
        }

    </script>
</body>
</html>
