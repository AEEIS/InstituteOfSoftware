
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Teacherlist</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="lay">
        <div>
            <table class="layui-hide" id="teacherlist" lay-filter="teacherlist_filter"></table>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.all.js"></script>


    <script>


        function callbackdata() {
            var checkStatus = layui.table.checkStatus('teacherlist'); //idTest 即为基础参数 id 对应的值
            return checkStatus;
        }

        layui.use(['table', 'layer'], function () {

            var table = layui.table;
            var layer = layui.layer;
            var index = layer.load(0, { shade: false }); //0代表加载的风格，支持0-2
            table.render({
                elem: '#teacherlist'
                , id: 'Teacherlist'
                , shade: index  
                , url: '/Teaching/Teacher/GetEmpData/'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                        { type: 'radio' }
                    , { field: 'EmpName', width: 120, title: '姓名' }
                    , { field: 'Number', width: 120, title: '员工编号' }
                    , { field: 'Sex', width: 120, title: '性别' }
                ]]
                , page: true

                , yes: function (index) {
                    alert("fd");
                }, done: function (res) {   //返回数据执行回调函数
                    layer.close(index);    //返回数据关闭loading

                }
            });

        });
    </script>
</body>
</html>
