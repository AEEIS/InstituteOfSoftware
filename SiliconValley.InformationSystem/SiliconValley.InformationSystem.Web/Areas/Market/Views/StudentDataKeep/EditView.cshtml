
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.StudentPutOnRecord
@using SiliconValley.InformationSystem.Entity.MyEntity;
<!DOCTYPE html>
<link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditView</title>
    <style> 
        .linu {
            width: 200px;
        }

        .LableCss1 {
            text-overflow: ellipsis;
            white-space: nowrap;
            float: left;
            display: block;
            padding: 9px 15px;
            width: 80px;
            font-weight: 400;
            line-height: 20px;
            text-align: right
        }

        .TextAreCss1 {
            height: 48px;
            width:91%;
           
        }    

        body .demo-class .layui-layer-title {
            background: #009688;
            color: #fff;
            border: none;
        }
        .layui-unselect
        {
            width: 200px;
        }
    </style>
</head>
<body>
    <div style="margin:20px auto;width:90%;">
        <form class="layui-form" lay-filter="myform1" style="margin:0px auto;width:90%">            
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">姓 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 名:</label><input type="hidden" id="Id" name="Id" value="@ViewBag.id"/>
                        <div class="layui-input-block">                          
                            <input name="StuName" id="StuName" class="layui-input linu" style="color:red" disabled="disabled"/> 
                        </div>
                    </div>
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">性 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 别:</label>
                        <div class="layui-input-block">
                            <div class="layui-col-sm5">
                                <input id="Sexone" type="radio" name="StuSex" value="男" title="男" checked="checked">
                            </div>
                            <div class="layui-col-sm3">
                                <input id="Sextwo" type="radio" name="StuSex" value="女" title="女">
                            </div>                                                      
                        </div>
                    </div>

                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">电 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 话:</label>
                        <div class="layui-input-block">            
                            <input name="StuPhone" id="StuPhone" class="layui-input linu" style="color:red" disabled="disabled"/> 
                        </div>
                    </div>
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">

                        <label class="LableCss1">出生日期:</label>
                        <div class="layui-input-block">
                            <input name="StuBirthy" id="StuBirthy" placeholder="YY-MM-DD" lay-verify="StuBirthy|content" class="layui-input linu"/>
                        </div>

                    </div>
                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="LableCss1">学校名称:</label>
                        <div class="layui-input-block">
                            <input name="StuSchoolName" id="StuSchoolName" class="layui-input linu" placeholder="学校名称"/>
                        </div>
                    </div>
                    <div class="layui-col-xs3 layui-col-sm3 layui-col-md3">
                        <label class="layui-form-label">学 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 历:</label>
                        <div class="layui-input-block">
                            <select style="width:200px;" class="layui-select" id="StuEducational" name="StuEducational">
                                <option value="初中">初中</option>
                                <option value="高中">高中</option>
                                <option value="大专">大专</option>
                                <option value="本科">本科</option>
                                <option value="中专">中专</option>
                            </select>
                        </div>

                    </div>
                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="LableCss1">家庭住址:</label>
                        <div class="layui-input-block">
                            <input name="StuAddress" id="StuAddress" placeholder="家庭住址" class="layui-input linu"/>
                        </div>
                    </div>
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">微 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 信:</label>
                        <div class="layui-input-block">
                            <input name="StuWeiXin" id="StuWeiXin" placeholder="微信" class="layui-input linu"/>
                        </div>
                    </div>
                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">Q &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Q:</label>
                        <div class="layui-input-block">
                            <input name="StuQQ" id="StuQQ" class="layui-input linu" placeholder="QQ"/>
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="LableCss1">信息来源:</label>
                        <div class="layui-input-block">
                            @Html.DropDownListFor(s => s.StuInfomationType_Id, ViewBag.infomation as IEnumerable<SelectListItem>)
                        </div>
                    </div>
                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="LableCss1">录入人员:</label>
                        <div class="layui-input-block">
                            <input id="StuEntering_1" name="StuEntering_1" class="layui-input linu" disabled="disabled"/> 
                            <input type="hidden" id="StuEntering" name="StuEntering" />
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">所在区域:</label>
                        <div class="layui-input-block">
                            @Html.DropDownListFor(s => s.Region_id, ViewBag.area as IEnumerable<SelectListItem>)
                        </div>
                    </div>
                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="LableCss1">是否上门:</label>
                        <div class="layui-input-block">
                            <div class="layui-col-sm5">
                                <input id="visitone" type="radio" name="StuIsGoto" value="true" title="是" checked="checked" lay-filter="radio1" readonly="readonly">
                            </div>
                            <div class="layui-col-sm3">
                                <input id="visitwo" type="radio" name="StuIsGoto" value="false" title="否" lay-filter="radio1" readonly="readonly">
                            </div>                                                       
                        </div>
                    </div>
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="LableCss1">上门日期:</label>
                        <div class="layui-input-block">
                            <input name="StuVisit" id="StuVisit" lay-verify="StuDateTime|IsVisit|content" placeholder="YY-MM-DD" class="layui-input linu"/>
                        </div>
                    </div>
                </div>
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">关&nbsp; 系&nbsp;人:</label>
                        <div class="layui-input-block">
                            <input name="Party" id="Party" placeholder="关系人" class="layui-input linu" />
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">备案 &nbsp; 人:</label>
                        <div class="layui-input-block">
                            <input type="hidden" id="EmployeesInfo_Id" name="EmployeesInfo_Id" />
                            <input name="e_Name" id="e_Name" class="layui-input linu" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                        <label class="layui-form-label">说 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 明:</label>
                        <div class="layui-input-block">
                            <textarea name="Reak" id="Reak" class="layui-input TextAreCss1"> </textarea>                          
                        </div>
                    </div>
                </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <div style="width:30%;margin:0px auto">
                        <button class="layui-btn" lay-submit="" lay-filter="xiugai">修改</button>
                        <button type="button" class="layui-btn" id="quxiao">取消</button>
                    </div>                   
                </div>
            </div>
            <input name="have" id="have" type="hidden" value="no"/>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        //转换时间的方法
        function TimeChange(newtime) {
            if (newtime == null)
                return "";
            var date = new Date(parseInt(newtime.slice(6)));
            var year = date.getFullYear();
            var month = date.getMonth();
            if ((month + 1) < 10) {
                month = "0" + Number(month + 1);
            } else {
                month = Number(month + 1);
            }
            var day = date.getDate();
            if (day < 10) {
                day = "0" + day;
            }
            var result = year + '-' + month + '-' + day;
            return result;
        }
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;
            var Mew_date = new Date();
            //刷新界面 所有元素
            form.render();
            //日期
            laydate.render({
                elem: '#StuVisit'
                , max: Mew_date.toString()
                , trigger: 'click'
            });
            laydate.render({
                elem: '#StuBirthy'
                , max: Mew_date.toString()
                , trigger: 'click'
            });
            
            $("#quxiao").click(function () {
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                parent.layer.close(index); //再执行关闭   

            });
            //监听是否上门单选按钮事件
            form.on('radio(radio1)', function (data) {
                if (data.value == "true") {
                    $("#have")[0].value = "yes";
                    $("#StuVisit")[0].removeAttribute("disabled");//可用
                } else {
                    $("#have")[0].value = "no";
                    $("#StuVisit")[0].setAttribute("disabled", "false");//禁用
                    $("#StuVisit")[0].value = null;
                }

            });          

            //自定义验证规则
            form.verify({
                IsVisit: function (value) {
                    var reg = /^ *$/;  //这里^和*之间有一个空格
                    var Is = reg.test(value);
                    var mm= $("#have")[0].value                    
                    if (mm != "no") {
                        if (Is == true) {
                            return "上门日期不能为空";
                        }
                    }
                }
                , PhoeNumber: [
                    /^[0-9]*$/
                    , '电话号码只能是数字'
                ]
                , content: function (value) {
                    var newsdate = new Date();
                    var olddate = new Date(value);
                    var s = newsdate - olddate;
                    if (s < 0) {
                        return "时间选择错误，请重新选择";
                    }
                }
            });

            //修改数据
            form.on('submit(xiugai)', function (data) {
                $.ajax({
                    url: "/Market/StudentDataKeep/EditFunction",
                    data: data.field,
                    type: "POST",
                    success: function (successdata) {
                        if (successdata.Success == true) {
                            layer.msg(successdata.Msg, {
                                icon: 1,
                                time: 2000,
                                shade:0.8
                            }, function () {
                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                parent.layer.close(index); //再执行关闭   
                                window.parent.LoadTable();
                            });
                        }else {
                            layer.msg(successdata.Msg, {
                                icon: 2,
                                time: 2000 //2秒关闭（如果不配置，默认是3秒）
                            });
                        }

                    }
                });
                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        });
        function IsDisable(values) {
            if (values == "false") {
                $("#StuVisit")[0].disabled = "disabled";
            } else {
                $("#StuVisit").removeAttr("disabled");
            }
        }
        $(function () {            
            $.ajax({
                url: '/Market/StudentDataKeep/FindStudentInfomation/' + @ViewBag.id,
                type: 'POST',
                success: function (successdata) {
                    if (this.success != "学生ID未拿到") {
                        successdata.StuBirthy = TimeChange(successdata.StuBirthy);
                        successdata.StuVisit = TimeChange(successdata.StuVisit);
                        successdata.StuSex = successdata.StuSex.toString();
                        successdata.StuIsGoto = successdata.StuIsGoto.toString();
                        layui.use(['form', 'layedit', 'laydate'], function () {
                            var form = layui.form;
                            $("#StuName")[0].innerText = successdata.StuName;
                            $("#StuPhone")[0].innerText = successdata.StuPhone;
                            $("#e_Name")[0].innerText = successdata.e_Name;
                            $("#StuEntering_1")[0].innerText = successdata.StuEntering_1;
                            $("#StuAddress").attr("title", successdata.StuAddress);
                            form.val("myform1", successdata);
                        });
                        IsDisable(successdata.StuIsGoto);
                    } else {
                        layui.use(['layer'], function () {
                            var layer = layui.layer;
                            layer.msg("信息加载错误!请重试", {
                                icon: 1,
                                time: 3000 
                            });
                        });
                    }
                    
                },
                error: function (errordata) {
                    layui.use(['layer'], function () {
                        var layer = layui.layer;
                        layer.msg("信息加载错误!请重试", {
                            icon: 1,
                            time: 3000 //2秒关闭（如果不配置，默认是3秒）
                        });
                    });
                }
            });           
        });
    </script>
</body>
</html>
