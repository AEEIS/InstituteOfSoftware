
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.BiddingRecord
@using SiliconValley.InformationSystem.Entity.MyEntity;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddBiddingRecord</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            height: 120px;
        }
    </style>

</head>
<body>
    <div>
        <form class="layui-form" action="">
            <div class="layui-container" style="margin-top:20px;">

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">竞争对手</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.BiddingOpponent, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入竞争对手" }, { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">网址</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Url, new Dictionary<string, object>() { { "placeholder", "请输入网址" }, { "class", "layui-input " } })
                        </div>

                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">单元</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Unit, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">关键词</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Keyword, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">首位出价</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.TheFirstBid, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">展现时间</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ShowTime, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs5 layui-col-sm5 layui-col-md5">
                        <label class="layui-form-label" style="width:130px;margin-left:-55px;">平均点击价格</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.AverageClickPrice, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>
                    <div class="layui-col-xs7 layui-col-sm7 layui-col-md7">
                        <label class="layui-form-label">文案创意</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.CopywritingOriginality, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>

                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-input-block" style="margin-top:80px;">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1" style="margin-left:220px;">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期验证
            laydate.render({
                elem: '#ShowTime',
                format:'yyyy-MM-dd'
            });
           
            //添加提交
            form.on('submit(demo1)', function (data) {
                console.log('添加提交：' + data);
                $.post("/Market/BiddingRecord/AddBiddingRecord", data.field, function (data) {
                    if (data.Success) {
                        layer.alert("添加成功!", { icon: 1 }, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layui.table.reload('mybrinfo');
                            parent.layer.close(index);

                        });
                    } else {
                        layer.alert("添加失败!");
                    }
                });
                return false;
            });


            //关闭添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });

        });
    </script>

</body>
</html>