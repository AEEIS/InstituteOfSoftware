        function OpenChildAddView(id) {
            mvalue = id;
            layui.use('layer', function () {
                var layer = layui.layer;
                layer.close(innlindex);
                layer.open({
                    type: 2,
                    content: '/Market/FollwingInfo/AddFollwingInfo/' + id
                    , area: ['800px', '580px']
                    , title: '添加跟踪页面'
                    , shade: 0.8
                    , anim: 4
                    , skin: 'demo-class2'
                });
            });

            
        }
    </script>

