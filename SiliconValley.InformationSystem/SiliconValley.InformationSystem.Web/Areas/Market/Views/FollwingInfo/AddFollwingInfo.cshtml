
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddFollwingInfo</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <style>
        .linu
        {
            width: 200px;
        }

        .LableCss1
        {
            text-overflow: ellipsis;
            white-space: nowrap;
            float: left;
            display: block;
            padding: 9px 15px;
            width: 80px;
            font-weight: 400;
            line-height: 20px;
            text-align: right
        }

        .TextAreCss1
        {
            height: 200px;
        }

        .butCss1
        {
            float: right;
            margin-right: 100px;
        } 
    </style>
</head>
<body>
    <div style="width:90%;margin:0px auto;margin-top:40px;">
        <form class="layui-form">          
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">学生等级:</label>
                    <div class="layui-input-block">                 
                        @Html.DropDownList("Rank", ViewBag.grand as IEnumerable<SelectListItem> ,new Dictionary<string, object>() { })
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                    <label class="layui-form-label">跟踪情况:</label>
                    <div class="layui-input-block">
                        @Html.TextArea("TailAfterSituation", new Dictionary<string, object>() { { "placeholder", "跟踪情况描述" }, { "class", "layui-input TextAreCss1" }, { "lay-verify", "required" } })
                    </div>
                </div>
            </div>             
            <div class="layui-form-item" style="margin-top:100px;">
                <div class="layui-input-block">
                    <div style="width:65%;text-align:right">
                        <button class="layui-btn" lay-submit="" lay-filter="tijiao">提交</button>
                        <button class="layui-btn butCss1" id="quxiao">取消</button>
                    </div>

                </div>
            </div>

        </form>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        layui.use(['form', 'layer'], function () {
            var form = layui.form;
            var layer = layui.layer;
            form.on('submit(tijiao)', function (data) {
                // console.log(data.field) //当前容器的全部表单字段，名值对形式：{name: value}
                $.ajax({
                    url: '/Market/FollwingInfo/AddFunction',
                    data: data.field,
                    type: "POST",
                    success: function (SucData) {
                        if (SucData != "ok") {
                            layer.msg(SucData, { icon: 2 });
                        } else {
                            layer.msg('添加成功', { icon: 1, shade: 0.8 }, function () {
                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                parent.layer.close(index); //再执行关闭
                            });
                        }
                    }
                });
                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        });

        //关闭弹出层
        $("#quxiao").click(function () {
            //当你在iframe页面关闭自身时
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.close(index); //再执行关闭
        });
    </script>
</body>
</html>
