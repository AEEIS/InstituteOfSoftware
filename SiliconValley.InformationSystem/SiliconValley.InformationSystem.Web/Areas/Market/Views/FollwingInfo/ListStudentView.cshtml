
@{
    Layout = null;
}
@using SiliconValley.InformationSystem.Entity.ViewEntity
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListStudentView</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <style>
        .linu
        {
            border-top: 0px;
            border-bottom: 1px dashed black;
            border-left: 0px;
            border-right: 0px;
            width: 200px;
        }

        .LableCss1
        {
            text-overflow: ellipsis;
            white-space: nowrap;
            float: left;
            display: block;
            padding: 9px 15px;
            width: 80px;
            font-weight: 400;
            line-height: 20px;
            text-align: left
        }

        .butCss1
        {
            margin-top: 40px;
            float: right;
            margin-right: 100px;
            background-color: #009688;
        }     
    </style>
</head>
<body>
    <div class="layui-tab" lay-filter="demo">
        <ul class="layui-tab-title">
            @{
                List<StudentData> sruentdd = ViewBag.Student as List<StudentData>;
                for (int i = 1; i <= sruentdd.Count; i++)
                {
                    if (i == 1)
                    {
                        <li class="layui-this">结果<span>@i</span></li>
                    }
                    else
                    {
                        <li>结果<span>@i</span></li>
                    }
                }
            }
        </ul>
        <div class="layui-tab-content">
            @{
                int index = 0;
                foreach (StudentData item in sruentdd)
                {

                    if (index == 0)
                    {
                        <div class="layui-tab-item layui-show">
                            <div style="width:90%;margin:0px auto;">
                                <form class="layui-form">
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">姓 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 名:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuName" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">性 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 别:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.stuSex" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">区 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 域:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.AreName" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">电话号码:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuPhone" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">学校名称:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuSchoolName" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">学生状态:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuStatus_Id" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">家庭住址:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuAddress" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">信息来源:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuInfomationType_Id" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">录入人员:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuEntering" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">备案日期:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuDateTime" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">是否上门:</label>
                                            <input type="text" class="layui-input linu" value="@item.StuIsGoto" />
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">上门日期:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuVisit" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">备 &nbsp;案  &nbsp;人:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.EmployeesInfo_Id" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-form-item" style="margin-top:50px">
                                        <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                                            <button class="layui-btn butCss1" id="Myquxiao" onclick="biangbi(@item.Id)">填写跟踪信息</button>
                                        </div>
                                        <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                                            <button class="layui-btn butCss1" id="Myquxiao" onclick="Edit(@item.Id)">编辑跟踪信息</button>
                                        </div>
                                        <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                                            <button class="layui-btn butCss1" id="Myquxiao" onclick="Sreach(@item.Id)">查询跟踪信息</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        index++;
                    }
                    else
                    {
                        <div class="layui-tab-item">
                            <div style="width:90%;margin:0px auto;">
                                <form class="layui-form">
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">姓 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 名:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuName" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">性 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 别:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.stuSex" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">区 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 域:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.AreName" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">电话号码:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuPhone" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">学校名称:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuSchoolName" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">学生状态:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuStatus_Id" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">家庭住址:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuAddress" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">信息来源:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuInfomationType_Id" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">录入人员:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuEntering" />
                                            </div>
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">备案日期:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuDateTime" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">是否上门:</label>
                                            <input type="text" class="layui-input linu" value="@item.StuIsGoto" />
                                        </div>
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">上门日期:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.StuVisit" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-row layui-form-item">
                                        <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                                            <label class="LableCss1">备 &nbsp;案  &nbsp;人:</label>
                                            <div class="layui-input-block">
                                                <input type="text" class="layui-input linu" value="@item.EmployeesInfo_Id" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-form-item" style="margin-top:50px">
                                        <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                                            <button class="layui-btn butCss1" id="Myquxiao" onclick="biangbi(@item.Id)">填写跟踪信息</button>
                                        </div>
                                        <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                                            <button class="layui-btn butCss1" id="Myquxiao" onclick="Edit(@item.Id)">编辑跟踪信息</button>
                                        </div>
                                        <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                                            <button class="layui-btn butCss1" id="Myquxiao" onclick="Sreach(@item.Id)">查询跟踪信息</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        var tabindex = -1;
        layui.use('element', function () {
            var element = layui.element;
            element.on('tab(demo)', function (data) {
                tabindex = data.index; //得到当前Tab的所在下标
            });
        });
        function biangbi(stuId) {
            //打开添加跟踪页面
            var myurl = '/Market/FollwingInfo/AddFollwingInfo/' + stuId;

            window.parent.StudentShow(myurl, "添加页面", "demo-class", 0);
        }

        function Edit(id) {
            var myurl = '/Market/FollwingInfo/EditView/' + id;
            window.parent.StudentShow(myurl, '编辑信息', "demo-class", 1);
        }

        function Sreach(id) {
            var myurl = '/Market/Consult/FollwingInfoView/' + id
            window.parent.StudentShow(myurl, '跟踪信息', "demo-class", 1);
        }
    </script>
</body>
</html>
