
@{
    Layout = null;
}
@model  SiliconValley.InformationSystem.Entity.ViewEntity.Sch_Market
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sch_MarketDetailsView</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <style>
        .linu
        {
            width: 200px;
        }

        .LableCss1
        {
            text-overflow: ellipsis;
            white-space: nowrap;
            float: left;
            display: block;
            padding: 9px 15px;
            width: 80px;
            font-weight: 400;
            line-height: 20px;
            text-align: right
        }

        .TextAreCss1
        {
            height: 80px;
        }
    </style>
</head>
<body>
    <div style="margin:20px auto;width:90%;">
        <form class="layui-form" lay-filter="myform2" style="width:98%;margin:0px auto;">
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">姓 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 名:</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu" value="@Model.StudentName" />
                        
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">性 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 别:</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu"   value="@Model.Sex"/>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">电 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 话:</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu"  value="@Model.Phone"/>
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">年龄</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu"   value="@Model.Age"/>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">学校名称</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu"  value="@Model.School"/>
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">学 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 历:</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu" value="@Model.Education"/>
                    </div>

                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">Q &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Q:</label>
                    <div class="layui-input-block">
                        <input   class="layui-input linu" value="@Model.QQ"/>
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">信息来源:</label>
                    <div class="layui-input-block">
                        <input   class="layui-input linu" value="@Model.Source" disabled/>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">录入人员:</label>
                    <div class="layui-input-block">
                        <input name="CreateUserName" class="layui-input linu" disabled="disabled" value="@Model.CreateUserName" />
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">备案日期:</label>
                    <div class="layui-input-block">
                        <input name="CreateDate" class="layui-input linu" disabled="disabled" value="@Model.CreateDate"/>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">市场类型:</label>
                    <div class="layui-input-block">
                        <input   class="layui-input linu"  disabled value="@Model.MarketType"/>
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">咨询 &nbsp; 师:</label>
                    <div class="layui-input-block">
                        <input class="layui-input linu"  disabled  value="@Model.Inquiry"/>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="LableCss1">学生状态:</label>
                    <div class="layui-input-block">
                        <input class="layui-input linu" disabled="disabled" name="MarketState" value="@Model.MarketState"/>
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">市场人员:</label>
                    <div class="layui-input-block">
                        <input  class="layui-input linu" disabled   value="@Model.SalePerson"/>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">区 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 域:</label>
                    <div class="layui-input-block">
                        <input disabled class="layui-input linu"   value="@ViewBag.regin">
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">关&nbsp; 系&nbsp;人:</label>
                    <div class="layui-input-block">
                        <input class="layui-input linu" disabled  value="@Model.RelatedPerson"/>
                    </div>
                </div>

            </div>

            <div class="layui-row layui-form-item">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                    <label class="layui-form-label">说 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 明:</label>
                    <div class="layui-input-block">
                        <textarea  style="height: 50px;width:93%" disabled class="layui-input">@Model.Remark</textarea>
                    </div>
                </div>
            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                    <label class="layui-form-label">跟踪内容:</label>
                    <div class="layui-input-block">
                        <textarea  style="height: 50px;width:93%" disabled class="layui-input">@Model.Info</textarea>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="margin-top:30px;">
                    <div style="width:30%;margin:0px auto ">
                        <button type="button" class="layui-btn" id="quxiao" onclick="Close()">关闭</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        function Close() {
            layui.use('layer', function () {
                var layer = layui.layer;
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                parent.layer.close(index); //再执行关闭   
            });
        }
        layui.use(['form','layder'], function () {
            var form = layui.form;
            var layer = layui.layer;
            //修改数据
            form.on('submit(xiugai)', function (data) {
                $.ajax({
                    url: "/Market/StudentDataKeep/EditFunction",
                    data: data.field,
                    type: "POST",
                    success: function (successdata) {
                        if (successdata.Success == true) {
                            layer.msg(successdata.Msg, {
                                icon: 1,
                                time: 2000,
                                shade: 0.8
                            }, function () {
                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                parent.layer.close(index); //再执行关闭   
                                window.parent.LoadTable();
                            });
                        } else {
                            layer.msg(successdata.Msg, {
                                icon: 2,
                                time: 2000 //2秒关闭（如果不配置，默认是3秒）
                            });
                        }

                    }
                });
                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        });
         
    </script>
</body>
</html>
