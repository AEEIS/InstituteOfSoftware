
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditDateView</title>
    <link href="~/Scripts/Tangmin_CssAndJs/com_js/MyOrther_tangmin.css" rel="stylesheet" />
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div>
        <form id="addmaster_form" class="layui-form" lay-filter="addmaster_form" style="margin-top:20px">
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs11 layui-col-sm11 layui-col-md11">
                    <label class="LableCss1">日期:</label>
                    <div class="layui-input-block">
                        <input type="text" id="OrwatchDate" name="OrwatchDate" class="layui-input"lay-verify="required" />
                    </div>
                </div>

            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="text-align:center;">
                    <button type="submit" class="layui-btn" lay-submit="" lay-filter="EditTrue">确定修改</button>
                    <button type="button" class="layui-btn" onclick="Myclose()">取消关闭</button>
                </div>
            </div>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        layui.use(['form', 'laydate'], function () {
            var form = layui.form;
            var laydate = layui.laydate;

            laydate.render({
                elem: '#OrwatchDate'
                , trigger: 'click'
            });

            form.render();

            //监听提交
            form.on('submit(EditTrue)', function (data) {
                window.parent.EditDateFunction(data.field.OrwatchDate);
                Myclose();
                return false;
            });
        })
        //关闭弹出层
        function Myclose() {
            var layer = layui.layer;
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.close(index); //再执行关闭
        }
    </script>
</body>
</html>
