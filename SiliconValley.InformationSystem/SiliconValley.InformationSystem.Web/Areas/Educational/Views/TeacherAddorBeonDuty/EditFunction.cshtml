
@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.ViewEntity.TM_Data.TeacherAddorBeonDutyView
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditFunction</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <style>
        .hideCss
        {
            display: none;
        }

        .layui-textarea
        {
            width: 100%;
            height: 38px;
            border-radius: 5px;
            min-height: 30px;
        }

        .LableCss1
        {
            text-overflow: ellipsis;
            white-space: nowrap;
            float: left;
            display: block;
            padding: 9px 15px;
            width: 80px;
            font-weight: 400;
            line-height: 20px;
            text-align: right
        }
        /*.layui-unselect
        {
            width: 100%;
            border-radius: 5px;
        }*/
        .lin
        {
            width: 100%;
        }

        .iconCss
        {
            position: absolute;
            right: 10px;
            font-size: 30px;
            top: 2px;
            color: #009688;
            cursor: pointer
        }
    </style>
</head>
<body>
    <div style="width:95%;margin-top:40px;margin-left:auto;margin-right:auto">
        <div id="hand_Div">
            <form id="system_form" class="layui-form" lay-filter="hand_addview">
                <div class="layui-row layui-form-item">                    
                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                        <label class="LableCss1">日 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 期:</label>
                        <div class="layui-input-block">
                            <input type="text" id="Anpaidate" name="Anpaidate" class="layui-input" value="@Model.Anpaidate"/>
                        </div>
                    </div>
                </div>
                <div class="layui-row layui-form-item">                    
                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                        <label class="LableCss1">班 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 级:</label>
                        <div class="layui-input-block" id="myclass">
                            <input type="text" id="ClassNumber" name="ClassNumber" disabled="disabled" class="layui-input" value="@Model.ClassNumber"/><icon id="iconMy" class="layui-icon iconCss">&#xe615;</icon>
                        </div>
                    </div>
                </div>               
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                        <label class="LableCss1">值班老师:</label>
                        <div class="layui-input-block" id="teachDiv">
                            <input type="text" id="Tearcher_Id" name="Tearcher_Id" class="layui-input"  disabled="disabled" value="@Model.EmpName"/><icon id="iconMy" class="layui-icon iconCss">&#xe615;</icon>
                        </div>
                    </div>
                </div>                 
                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="text-align:center;margin-top:30px;">
                        <button type="submit" class="layui-btn" lay-submit="" lay-filter="handBtn">确定修改</button>
                        <button id="btn1" type="button" class="layui-btn">取消关闭</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        $(function () {
            var form;
            var layer;
            var laydate;
            layui.use(['form','laydate'], function () {
                form = layui.form;
                layer = layui.layer;
                laydate = layui.laydate;
                laydate.render({
                    elem: '#Anpaidate'
                    , trigger: 'click'

                });
            });

            //关闭
            $("#btn1").click(function () {
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                parent.layer.close(index); //再执行关闭
            });
        });
    </script>
</body>
</html>
