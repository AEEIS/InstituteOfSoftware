
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateClassTeacher</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Scripts/Tangmin_CssAndJs/com_js/MyOrther_tangmin.css" rel="stylesheet" />
</head>
<body>
    <div>
        <form class="layui-form" style="margin-top:40px" lay-filter="form_classTeacherData">
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">阶段:</label>
                    <div class="layui-input-block">
                        @Html.DropDownList("glist", ViewBag.grandlist as IEnumerable<SelectListItem>, new Dictionary<string, object>() { { "lay-filter", "grand" } })
                    </div>
                </div>
                <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                    <label class="layui-form-label">班级:</label>
                    <div id="Myclass_Div" class="layui-input-block">

                    </div>
                </div>

            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12">
                    <label class="LableCss1">任课老师:</label>
                    <div id="div_teavher12" class="layui-input-block">
                        
                    </div>
                </div>

            </div>
            <div class="layui-row layui-form-item">
                <div class="layui-col-xs12 layui-col-sm12 layui-col-md12" style="text-align:center;margin-top:50px">
                    <button type="submit" class="layui-btn" lay-submit="" lay-filter="Update_clasTacher">确定修改</button>
                    <button type="button" class="layui-btn" onclick="MyClose()">取消关闭</button>
                </div>
            </div>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script>
        layui.use(['form'], function () {
            var form = layui.form;
            form.on('select(grand)', function (data) {
                $("#Myclass_Div")[0].innerHTML = "";
                if (data.value != "0") {
                    $.ajax({
                        url: '/Educational/Reconcile/GetClassScheduleSelect/' + data.value,
                        success: function (sudata) {
                            //获取班级slect
                            var classselect = $('<select id="class_select" name="class_select" class="layui-select" lay-filter="bianji2"><option value="0" selected>--请选择--</select>');
                            for (var i = 0; i < sudata.length; i++) {
                                $('<option value=' + sudata[i].id + '>' + sudata[i].ClassNumber + '<option>').appendTo(classselect);
                            }
                            $("#Myclass_Div").append(classselect);
                            form.render(); //更新全部
                        }
                    });
                }
            });
            //点击班级
            form.on('select(bianji2)', function (data) {
                $("#div_teavher12")[0].innerHTML = "";
                if (data.value!="0") {
                    $.ajax({
                        url: '/Educational/Reconcile/GetTecherAll/' + data.value,
                        success: function (sucdata) {
                            var ss = $('<select name="teacher_id" name="teacher_id"><option value="0">--请选择--</option></select>');
                            for (var i = 0; i < sucdata.list_teacher.length; i++) {
                                $('<option value=' + sucdata.list_teacher[i].Teacher_id + '>' + sucdata.list_teacher[i].Name + '</option>').appendTo(ss);
                            }
                            $("#div_teavher12").append(ss);
                            if (sucdata.t_id == "0") {
                                layer.msg('该班级没有安排老师上专业课！！！', { icon:2 });
                            } else {
                                //给表单赋值
                                form.val("form_classTeacherData", {  
                                    "teacher_id": sucdata.t_id.toString()
                                });
                            }
                            form.render();
                        }
                    });
                }

            })
            //监听提交
            form.on('submit(Update_clasTacher)', function (data) {
                if (data.field.class_select == "0") {
                    layer.msg('请选择班级！！', { icon: 2 });
                } else {
                    $.ajax({
                        url: '/Educational/Reconcile/UpdateClassTeacherFuntion',
                        type: 'POST',
                        data: data.field,
                        success: function (sucdata) {
                            if (sucdata.Success == false) {
                                layer.msg(sucdata.Msg, { icon: 2 });
                            } else {
                                layer.msg('修改成功！！', { icon: 1, shade: 0.8 }, function () {
                                    window.parent.TableFulsh();
                                    MyClose();
                                });
                            }
                        }
                    });
                }

                return false;
            });
        });

        function MyClose() {
            var layer = layui.layer;
            //当你在iframe页面关闭自身时
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.close(index); //再执行关闭
        }
    </script>
</body>
</html>
